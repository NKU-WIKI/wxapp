page {
  background: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

.about-card {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #07c160;
}

.section-content {
  padding: 0 20rpx;
}

.about-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  padding: 16rpx 0;
  white-space: pre-wrap;
}

.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 40rpx 0;
  margin-top: 20rpx;
}