/* 页面容器 */
.page-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #f7f7f7;
  box-sizing: border-box;
  overflow: hidden;
}

/* 搜索区域 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eaeaea;
  z-index: 10;
}

.search-box {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.search-box-hover {
  background-color: #eaeaea;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #1aad19;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 内容区域 */
.content-area {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 加载指示器 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  padding: 40rpx;
}

.loading-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1aad19;
  margin: 0 8rpx;
  animation: dotPulse 1.5s infinite ease-in-out;
}

.loading-dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.5s;
}

.loading-dot:nth-child(3) {
  animation-delay: 1s;
}

@keyframes dotPulse {
  0%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 结果容器 */
.result-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

/* 查询信息 */
.query-info {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #eaeaea;
  font-size: 24rpx;
  color: #888;
}

.original-query, .rewritten-query {
  display: block;
  margin-bottom: 8rpx;
}

/* 文本内容区域 */
.text-content {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  overflow-y: auto;
  max-height: 40vh;
}

/* 打字机光标 */
.typing-cursor {
  display: inline-block;
  width: 2px;
  height: 24rpx;
  background-color: #333;
  margin-left: 4rpx;
  vertical-align: middle;
  animation: blink 0.8s infinite;
}

@keyframes blink {
  0%, 100% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}

/* 操作按钮 */
.result-actions {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eaeaea;
  background-color: #f9f9f9;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #555;
}

.action-btn-hover {
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

/* 信息来源 */
.sources-container {
  padding: 20rpx;
  border-top: 1rpx solid #eaeaea;
  background-color: #f9f9f9;
}

.sources-header {
  margin-bottom: 10rpx;
}

.sources-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #444;
}

.sources-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.source-item {
  display: flex;
  padding: 15rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

.source-item-hover {
  background-color: #f5f5f5;
}

.source-icon {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.source-icon image {
  width: 40rpx;
  height: 40rpx;
}

.source-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.source-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.source-snippet {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.source-url {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 建议问题 */
.suggested-questions {
  padding: 20rpx;
  border-top: 1rpx solid #eaeaea;
  background-color: #f9f9f9;
}

.questions-header {
  margin-bottom: 10rpx;
}

.questions-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #444;
}

.questions-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.question-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

.question-item-hover {
  background-color: #f5f5f5;
}

.question-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.question-text {
  font-size: 26rpx;
  color: #1aad19;
  flex: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 10rpx;
}

.empty-sub-text {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
}

.sample-questions {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sample-question {
  width: 90%;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background-color: #f2f7fa;
  border-radius: 10rpx;
  text-align: left;
  font-size: 26rpx;
  color: #1aad19;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* Towxml 组件样式调整 */
.towxml {
  padding: 0 !important;
}

/* MD样式 */
.md-p {
  margin-bottom: 20rpx;
}

.md-h1, .md-h2, .md-h3, .md-h4, .md-h5, .md-h6 {
  font-weight: bold;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.md-h1 {
  font-size: 36rpx;
  color: #333;
  border-bottom: 1rpx solid #eaeaea;
  padding-bottom: 10rpx;
}

.md-h2 {
  font-size: 32rpx;
  color: #444;
}

.md-h3 {
  font-size: 30rpx;
  color: #555;
}

.md-quote {
  border-left: 8rpx solid #d0e9c6;
  padding: 10rpx 20rpx;
  background-color: #f9f9f9;
  margin: 20rpx 0;
  color: #666;
}

.md-li {
  margin-bottom: 6rpx;
  padding-left: 20rpx;
}

.md-code {
  background-color: #f5f5f5;
  padding: 15rpx;
  border-radius: 6rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-wrap: break-word;
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #666;
}

.md-inline-code {
  background-color: #f0f0f0;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-family: monospace;
  font-size: 24rpx;
}

.md-link {
  color: #1aad19;
}

.md-hr {
  border: none;
  border-top: 1rpx solid #eaeaea;
  margin: 20rpx 0;
} 