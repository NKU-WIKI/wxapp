.agent-page {
  height: 100vh;
  background-color: #f7f9fc;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.agent-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.agent-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.agent-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.agent-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.agent-content {
  display: flex;
  justify-content: center;
}

.hint-text {
  font-size: 30rpx;
  color: #888;
  text-align: center;
  padding: 60rpx 0;
}