/* 页面基础样式 */
.discover-page {
  padding: 20rpx;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-icons {
  display: flex;
  gap: 20rpx;
}

.header-icons .icon {
  width: 48rpx;
  height: 48rpx;
}

/* 公共样式 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.update-text, .more {
  font-size: 24rpx;
  color: #666;
}

/* 校园热点样式 */
.hot-grid {
  display: flex;
  gap: 20rpx;
}

.hot-item {
  flex: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.hot-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.hot-info {
  padding: 10rpx 0;
}

.hot-title {
  font-size: 28rpx;
  display: block;
}

.hot-count {
  font-size: 24rpx;
  color: #666;
}

/* AI助手样式 */
.ai-grid {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.ai-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0f2ff;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  width: 200rpx;
}

.ai-icon {
  width: 45rpx;
  height: 40rpx;
  margin-bottom: 16rpx;
}

/* 校园活动样式 */
.activity-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin: 10rpx 0;
}

.activity-time,
.activity-location {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin: 5rpx 0;
}

/* 学习资源样式 */
.resource-grid {
  display: flex;
  gap: 20rpx;
}

.resource-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.resource-icon {
  width: 55rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.resource-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.resource-count {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}