page {
  background: #f5f5f5;
  min-height: 100vh;
}

.discover-page {
  padding: 0;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

.header-icons {
  display: flex;
  gap: 30rpx;
}

.header-icons .icon {
  width: 40rpx;
  height: 40rpx;
}

/* 校园热点 */
.section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
}

.update-text {
  font-size: 24rpx;
  color: #999;
}

/* AI助手 */
.ai-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.ai-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f8fc;
  padding: 20rpx 0;
  border-radius: 12rpx;
}

.ai-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}

.ai-item text {
  font-size: 24rpx;
  color: #333;
}

.container {
  min-height: 100vh;
  background: #f7f9fc;
  padding: 0 0 30rpx;
}

.main-content {
  width: 100%;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.icon-wrapper {
  margin-bottom: 20rpx;
}

.icon-wrapper.error {
  animation: shake 0.6s ease-in-out;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.error-actions {
  display: flex;
  gap: 20rpx;
}

.retry-btn,
.close-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.retry-btn {
  background: #1aad19;
  color: #fff;
}

.close-btn {
  background: #f5f5f5;
  color: #666;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
  20%, 40%, 60%, 80% { transform: translateX(5px); }
}