/* 页面基础样式 */
.discover-page {
  padding: 20rpx;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-icons {
  display: flex;
  gap: 20rpx;
}

.header-icons .icon {
  width: 48rpx;
  height: 48rpx;
}

/* 公共样式 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.update-text, .more {
  font-size: 24rpx;
  color: #666;
}

/* 校园热点样式 */
.hot-grid {
  display: flex;
  gap: 20rpx;
}

.hot-item {
  flex: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.hot-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.hot-info {
  padding: 10rpx 0;
}

.hot-title {
  font-size: 28rpx;
  display: block;
}

.hot-count {
  font-size: 24rpx;
  color: #666;
}

/* AI助手样式 */
.ai-grid {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.ai-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0f2ff;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  width: 200rpx;
}

.ai-icon {
  width: 45rpx;
  height: 40rpx;
  margin-bottom: 16rpx;
}

/* 校园活动样式 */
.activity-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin: 10rpx 0;
}

.activity-time,
.activity-location {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin: 5rpx 0;
}

/* 学习资源样式 */
.resource-grid {
  display: flex;
  gap: 20rpx;
}

.resource-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.resource-icon {
  width: 55rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.resource-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.resource-count {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

/* 在现有样式后添加 */
.posts-section {
  margin-bottom: 30rpx;
}

.post-list {
  background: #fff;
  border-radius: 12rpx;
}

.post-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 15rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.post-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.post-actions {
  display: flex;
  gap: 30rpx;
}

.action {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.action image {
  width: 32rpx;
  height: 32rpx;
}

.action text {
  font-size: 24rpx;
  color: #666;
}

.discover-container {
  padding: 20rpx;
  background: #f6f6f6;
}

.post-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.post-content {
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  margin-top: 20rpx;
}

.image-grid image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.interaction-bar {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-item image {
  width: 40rpx;
  height: 40rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}