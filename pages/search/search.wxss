/* 搜索页面样式 */
page {
  background-color: #f7f9fc;
  min-height: 100vh;
}

/* 搜索模式切换标签 */
.search-tabs {
  display: flex;
  background-color: #fff;
  padding: 16rpx 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.search-tab-item {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.search-tab-item.active {
  color: #1aad19;
  background-color: rgba(26, 173, 25, 0.1);
  font-weight: 500;
}

/* 搜索建议 */
.search-suggestions {
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: #f7f9fc;
}

.suggestion-icon {
  margin-right: 20rpx;
  width: 32rpx;
  height: 32rpx;
}

.suggestion-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
}

/* 搜索历史 */
.history-container {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
  margin-left: auto;
  padding: 10rpx 0;
}

/* 智能搜索结果样式 */
.intelligent-search-results {
  margin: 20rpx;
}

.chat-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.message-list {
  display: flex;
  flex-direction: column;
}

.message {
  margin-bottom: 30rpx;
}

.message-content {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  word-break: break-word;
}

.message-content.user {
  background-color: #1aad19;
  color: #fff;
  align-self: flex-end;
  margin-left: auto;
  border-radius: 12rpx 12rpx 0 12rpx;
}

.message-content.assistant {
  background-color: #f8f8f8;
  color: #333;
  align-self: flex-start;
  border-radius: 0 12rpx 12rpx 12rpx;
}

/* 加载动画 */
.loading-dots {
  display: flex;
  padding: 10rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #aaa;
  margin-right: 8rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

/* 错误消息 */
.error-message {
  color: #e64340;
}

/* 知识源列表 */
.source-list {
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

.source-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.source-item {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.source-item-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.source-item-type {
  font-size: 22rpx;
  color: #999;
}

/* 推荐问题 */
.suggested-questions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.suggested-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.suggested-list {
  display: flex;
  flex-direction: column;
}

.suggested-item {
  padding: 16rpx 20rpx;
  background-color: #f7f9fc;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #1aad19;
}

/* weui组件样式覆盖 */
.weui-search-bar {
  padding: 16rpx 20rpx !important;
  background-color: #f7f9fc !important;
  border-bottom: none !important;
}

.weui-search-bar__form {
  border-radius: 8rpx !important;
  background-color: #fff !important;
}

.weui-search-bar__input {
  height: 60rpx !important;
  font-size: 28rpx !important;
  line-height: 60rpx !important;
}

.weui-icon-search {
  font-size: 32rpx !important;
}

/* 搜索结果列表 */
.search-results {
  margin-top: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 30rpx;
}

/* 头部搜索框 */
.header {
  background-color: #fff;
  padding: 0 20rpx 20rpx;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  margin-top: 10rpx;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 70rpx 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #1aad19;
}

.clear-btn {
  position: absolute;
  right: 120rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #ccc;
  color: #fff;
  font-size: 28rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 0 20rpx;
  overflow-y: auto;
}

/* 搜索历史 */
.search-history {
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
  padding: 10rpx 0;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 搜索结果 */
.search-results {
  margin-top: 20rpx;
}

.result-count {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.result-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.result-info {
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.result-info text {
  margin-right: 20rpx;
}

.result-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #1aad19;
  background-color: rgba(26, 173, 25, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  margin-top: 10rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 无结果 */
.no-result {
  text-align: center;
  padding: 100rpx 0;
}

.no-result-text {
  font-size: 30rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 30rpx 0;
}

.load-more-btn {
  display: inline-block;
  font-size: 28rpx;
  color: #1aad19;
  padding: 10rpx 30rpx;
  border: 1rpx solid #1aad19;
  border-radius: 30rpx;
}

.no-more {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 30rpx 0;
}

/* 加载图标小版本 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-icon-small {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3cc51f;
  border-radius: 50%;
  margin-right: 10rpx;
  animation: spin 1s linear infinite;
}

/* 热门搜索 */
.hot-searches {
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.hot-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1aad19;
}

.hot-list {
  display: flex;
  flex-direction: column;
}

.hot-item {
  display: flex;
  align-items: center;
  padding: 18rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.hot-item:last-child {
  border-bottom: none;
}

.hot-rank {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b6b;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  font-weight: bold;
}

.hot-rank.normal {
  background-color: #ccc;
}

.hot-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.hot-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 添加自定义searchbar样式 */
.custom-searchbar {
  width: 100%;
  padding: 8rpx 30rpx;
}

.weui-search-bar {
  background-color: transparent !important;
  border-bottom: none !important;
}

/* 修改搜索结果项样式 */
.searchbar-result {
  margin-top: 0;
  font-size: 28rpx;
}

.searchbar-result .weui-cell {
  padding: 24rpx 30rpx;
  background-color: #fff;
}

.searchbar-result .weui-cell:before {
  display: none;
}
