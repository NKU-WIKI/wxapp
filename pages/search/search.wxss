/* 美化的搜索页面样式 */
page {
  background-color: #f7f9fc;
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 搜索区域 */
.search-container {
  padding: 24rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #f7f9fc;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.search-box-hover {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  height: 70rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

.search-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.clear-icon, .voice-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
  transition: all 0.2s ease;
}

.voice-icon.recording {
  animation: pulse 1s infinite;
  opacity: 1;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

/* 分类列表 */
.category-list {
  display: flex;
  white-space: nowrap;
  margin-top: 24rpx;
  padding: 0 4rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  transition: all 0.2s ease;
}

.category-item.active {
  color: #6252ee;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.8;
}

.category-name {
  font-size: 24rpx;
}

/* 搜索历史 */
.search-history {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.clear-history {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f5f7fa;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.history-item:active {
  transform: scale(0.95);
  background-color: #eef0f5;
}

.history-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  opacity: 0.5;
}

.history-text {
  font-size: 26rpx;
  color: #666;
}

/* 搜索结果区域 */
.content-area {
  flex: 1;
  padding: 0 30rpx 30rpx;
}

/* 加载中 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #6252ee;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* 搜索结果列表 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.result-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.source-tag {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.source-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.website-tag {
  background-color: #e6ffef;
  color: #00cc88;
}

.wechat-tag {
  background-color: #f0ffe6;
  color: #7fcc00;
}

.market-tag {
  background-color: #fff6e6;
  color: #cc7a00;
}

.douyin-tag {
  background-color: #ffe6e6;
  color: #cc0000;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.result-excerpt {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.image-preview {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.preview-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.result-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f5f5f5;
}

.result-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.stat-count {
  color: #666;
  font-weight: 500;
  margin-right: 4rpx;
}

.result-badges {
  display: flex;
  gap: 12rpx;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.official-badge {
  background-color: #fff0e6;
  color: #ff6600;
}

.hot-badge {
  background-color: #ffe6e6;
  color: #cc0000;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-sub-text {
  font-size: 26rpx;
  color: #999;
}

/* 美化标题 */
.stream-h1, .stream-h2, .stream-h3, .stream-h4, .stream-h5, .stream-h6 {
  font-weight: bold;
  margin: 24rpx 0 12rpx;
  color: #333;
  line-height: 1.3;
}

.stream-h1 {
  font-size: 40rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 12rpx;
  margin-bottom: 24rpx;
}

.stream-h2 {
  font-size: 36rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 8rpx;
}

.stream-h3 {
  font-size: 32rpx;
}

.stream-h4 {
  font-size: 30rpx;
}

.stream-h5, .stream-h6 {
  font-size: 28rpx;
}

/* 列表项 */
.stream-list-item {
  padding: 4rpx 0 4rpx 16rpx;
  margin: 6rpx 0;
  position: relative;
}

/* 代码块内容 */
.code-block-content {
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  font-size: 26rpx;
  line-height: 1.6;
  padding: 10rpx 0;
  tab-size: 2;
}

/* 复制代码按钮 */
.copy-code-btn {
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #555;
  opacity: 0.8;
  z-index: 1;
}

/* 链接样式优化 */
.stream-link {
  display: inline;
  word-break: break-all;
  position: relative;
  padding: 0 2rpx;
  transition: all 0.2s ease;
  word-wrap: break-word;
  font-weight: 500;
  text-decoration: none;
  border-bottom: 1rpx solid #0072F5;
}

/* 表格样式 */
.stream-table {
  width: 100%;
  margin: 16rpx 0;
  border-collapse: collapse;
  overflow-x: auto;
  display: block;
}

.stream-table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.stream-table-header .stream-table-cell {
  font-weight: bold;
  background-color: #f5f7fa;
}

.stream-table-cell {
  flex: 1;
  padding: 12rpx 16rpx;
  font-size: 28rpx;
  border-right: 1rpx solid #eee;
  min-width: 160rpx;
  word-break: break-word;
}

.stream-table-cell:last-child {
  border-right: none;
}

/* 测试按钮 */
.test-btn {
  margin-top: 40rpx;
  padding: 16rpx 32rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.test-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

/* 链接样式 */
.md-link {
  color: #1890ff;
  text-decoration: underline;
  display: inline;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

.md-link:active {
  opacity: 0.7;
  background-color: rgba(24, 144, 255, 0.1);
}

/* 富文本内容样式增强 */
.text-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 20rpx;
}

.text-content .h1,
.text-content .h2,
.text-content .h3 {
  font-weight: bold;
  margin: 20rpx 0;
  color: #222;
}

.text-content .h1 {
  font-size: 36rpx;
}

.text-content .h2 {
  font-size: 32rpx;
}

.text-content .h3 {
  font-size: 30rpx;
}

.text-content .md-p {
  margin: 16rpx 0;
}

.text-content .md-code {
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
  margin: 16rpx 0;
}

.text-content .md-inline-code {
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: monospace;
}

.text-content .md-quote {
  border-left: 8rpx solid #e8e8e8;
  padding-left: 16rpx;
  color: #666;
  margin: 16rpx 0;
}

.text-content .md-li {
  margin: 8rpx 0;
  padding-left: 16rpx;
}