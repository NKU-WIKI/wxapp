/* 简化的搜索页面样式 */
page {
  background-color: #f8f8f8;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
}

/* RAG回答样式 */
.rag-results {
  padding: 0rpx;
  background-color: #f7f7f7;
}

/* RAG加载容器样式 */
.rag-loading-container {
  padding: 0rpx;
  background-color: #f7f7f7;
}

.rag-answer-container {
  padding: 30rpx 40rpx;
  margin: 0 10rpx;
  background-color: #fff;
  border-radius: 20rpx;
  width: auto;
}

.rag-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.rag-avatar {
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rag-nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rag-content {
  margin-bottom: 30rpx;
}

.rag-content text-area {
  width: 100%;
}

.rag-sources {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 覆盖text-area组件的默认样式 */
.rag-content .text-area-container {
  margin: 0;
  padding: 0;
  width: 100%;
}

.rag-content .text-area-container .markdown-preview {
  margin: 0;
  padding: 0;
  width: 100%;
}

.rag-content .text-area-container .text-preview {
  margin: 0;
  padding: 0;
  width: 100%;
}

/* 搜索建议 */
.search-suggestions {
  background-color: #fff;
  border-radius: 8rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: #f5f5f5;
}

.suggestion-item icon {
  margin-right: 16rpx;
  color: #999;
}

.suggestion-item text {
  font-size: 28rpx;
  color: #333;
}

/* 标题样式 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 15rpx 0;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 28rpx;
  width: 8rpx;
  background-color: #6369e8;
  border-radius: 4rpx;
}

.clear-btn {
  font-size: 26rpx;
  color: #6369e8;
  font-weight: normal;
}

/* 搜索前缀指南 */
.search-prefix-guide {
  margin: 30rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.prefix-list {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.prefix-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.prefix-item:last-child {
  border-bottom: none;
}

.prefix-icon {
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  border-radius: 50%;
}

.prefix-content {
  flex: 1;
}

.prefix-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.prefix-desc {
  font-size: 26rpx;
  color: #666;
}

/* 搜索为空状态 */
.empty-search {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin: 20rpx 0 40rpx;
}

.empty-tips {
  width: 100%;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.prefix {
  color: #6369e8;
  font-weight: bold;
  margin: 0 4rpx;
}

/* 搜索提示前缀列表 */
.search-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.search-tips-prefixes {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  width: 80%;
}

.search-tips-prefixes text {
  display: block;
  margin-bottom: 5px;
  color: #999;
  font-size: 14px;
}

.search-tips-prefixes .prefix {
  font-weight: bold;
  color: #6369e8;
  margin: 0 4px;
}

/* 热门搜索 */
.hot-searches {
  margin-top: 20rpx;
}

.hot-list {
  display: flex;
  flex-wrap: wrap;
}

.hot-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.hot-rank {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f0f0;
  color: #999;
  border-radius: 50%;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.hot-rank.top {
  background: #6369e8;
  color: #fff;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 搜索历史 */
.search-history {
  margin-top: 40rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 搜索内容区 */
.search-content {
  background-color: #fff;
  margin: 16rpx;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-top:0rpx;
}

/* 查询与回答 */
.query-info, .answer-box {
  margin-bottom: 20rpx;
}

.label {
  font-weight: bold;
  margin-right: 8rpx;
  color: #333;
}

/* 建议问题样式 */
.suggest-questions {
  margin-top: 30rpx;
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.question-item {
  display: flex;
  align-items: center;
  background-color: #f8f9fe;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.question-item:active {
  background-color: #edeef9;
}

.question-item icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.question-item text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 结果摘要 */
.result-summary {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0 16rpx;
}

/* 分页 */
.pagination {
  padding: 20rpx 0 10rpx;
  text-align: center;
}

.load-more {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #1aad19;
  background-color: #f0f9f0;
  border-radius: 32rpx;
}

/* 加载中样式简化 - 使用loading组件 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-more {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

/* 无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.no-result icon {
  margin-bottom: 24rpx;
  color: #ddd;
}

.no-result text {
  font-size: 28rpx;
  color: #999;
}

/* 搜索按钮 */
.search-button {
  margin-top: 32rpx;
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #f0f5ff;
  color: #3366cc;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #e8e8e8;
}

.search-button icon {
  margin-right: 12rpx;
}

.search-button text {
  color: #3366cc;
}

.search-button:active {
  opacity: 0.8;
}

/* 新增搜索历史下拉框样式 */
.search-history-dropdown {
  position: absolute;
  /* top值由JavaScript动态计算，不再使用固定值 */
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
}

.history-dropdown-list {
  padding: 10rpx 0;
  max-height: 500rpx; /* 增加最大高度，使用rpx单位 */
  overflow-y: auto;
}

.history-dropdown-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  transition: background-color 0.2s ease;
}

.history-dropdown-item:active {
  background-color: #f8f9fa;
}

.history-dropdown-item .history-text {
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.history-dropdown-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafbfc;
}

.footer-btn {
  font-size: 26rpx;
  color: #999999;
  margin-left: 40rpx;
  padding: 10rpx;
  transition: color 0.2s ease;
}

.footer-btn:active {
  color: #6369e8;
}
