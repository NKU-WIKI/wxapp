/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f9fc;
  padding-top: 110rpx; /* 添加顶部内边距，避免被导航栏和标签栏遮挡 */
  box-sizing: border-box;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding-top: 10rpx;
}

/* 通知列表样式 */
.notification-list {
  height: calc(100vh - 110rpx);  /* 减去顶部内边距 */
  padding: 0 20rpx;
  box-sizing: border-box;
}

.notification-item {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.notification-item.read {
  opacity: 0.7;
  background-color: #fafafa;
}

.notification-icon {
  margin-right: 20rpx;
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.notification-title .nickname {
  font-weight: 500;
}

.notification-title .action {
  color: #666;
  margin: 0 8rpx;
}

.notification-title .target {
  color: #666;
}

.notification-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  background-color: #f9f9f9;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  margin: 6rpx 0;
  max-width: 85%;
  word-break: break-all;
  font-weight: 500;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  font-weight: normal;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #EE0000;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 底部按钮区域 */
.footer {
  padding: 20rpx;
  width: 90%;
  margin: 0 auto;
  position: fixed;
  bottom: 40rpx;
  left: 5%;
  right: 5%;
  z-index: 100;
}

.mark-all-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.mark-all-btn:active {
  opacity: 0.9;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
} 