/* 消息列表样式 */
.notification-list {
  flex: 1;
  padding: 20rpx;
}

.notification-item {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.notification-item.read {
  opacity: 0.7;
  background-color: #fafafa;
}

.notification-icon {
  margin-right: 20rpx;
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.notification-title .nickname {
  font-weight: 500;
}

.notification-title .action {
  color: #666;
  margin: 0 8rpx;
}

.notification-title .target {
  color: #666;
}

.notification-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff4d4f;
  margin-left: 20rpx;
}

.footer {
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.mark-all-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.mark-all-btn:active {
  opacity: 0.9;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中提示 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 没有更多提示 */
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.page {
  background: #f5f5f5;
  min-height: 100vh;
}

.scroll-position{
  padding: 18%;
}
