<view class="notification-container">
  <!-- 顶部标签栏 -->
  <view class="tab-bar">
    <view class="tab-item {{activeTab === 'like' ? 'active' : ''}}" bindtap="switchTab" data-tab="like">
      点赞
    </view>
    <view class="tab-item {{activeTab === 'favourite' ? 'active' : ''}}" bindtap="switchTab" data-tab="favourite">
      收藏
    </view>
    <view class="tab-item {{activeTab === 'comment' ? 'active' : ''}}" bindtap="switchTab" data-tab="comment">
      评论
    </view>
  </view>

  <!-- 消息列表 -->
  <scroll-view class="notification-list" scroll-y="true" bindscrolltolower="onReachBottom" enable-back-to-top refresher-enabled="{{true}}" refresher-triggered="{{loading}}" bindrefresherrefresh="onPullDownRefresh">
    <block wx:if="{{notifications[activeTab].length > 0}}">
      <view class="notification-item {{item.isRead ? 'read' : ''}}" 
            wx:for="{{notifications[activeTab]}}" 
            wx:key="id" 
            bindtap="goToPost" 
            data-post-id="{{item.postId}}">
        <view class="notification-avatar">
          <image class="avatar" src="{{item.avatar}}"></image>
        </view>
        <view class="notification-content">
          <view class="notification-header">
            <text class="username">{{item.name}}</text>
            <text class="time">{{item.time}}</text>
          </view>
          <view class="notification-text">
            <block wx:if="{{activeTab === 'comment'}}">
              {{action}}了你的「{{item.postTitle}}」这条帖子并说了"{{item.content}}"
            </block>
            <block wx:else>
              {{action}}了你的「{{item.postTitle}}」这条帖子
            </block>
          </view>
        </view>
      </view>
      <view wx:if="{{!pagination.hasMore}}" class="no-more">
        没有更多消息了
      </view>
    </block>
    <view wx:else class="empty-state">
      <image class="empty-icon" src="/assets/icons/empty.png"></image>
      <text class="empty-text">暂无{{action}}消息</text>
    </view>
  </scroll-view>

  <!-- 全部标记已读按钮 -->
  <view class="mark-all-read" bindtap="markAllRead">
    <text>全部标记为已读</text>
  </view>

  <!-- 加载中提示 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
</view>