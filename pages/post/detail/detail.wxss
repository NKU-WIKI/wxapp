/* pages/post/detail/detail.wxss */

.post-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  margin-top: 90rpx;
  padding: 12rpx;
}

/* 帖子详情样式 */
.post-detail {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  /* 确保样式能够正确应用到post-item组件 */
  width: 100%;
  box-sizing: border-box;
}

/* 评论列表容器样式 */
.comment-list-container {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 评论输入框 */
.comment-input-container {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 8px 12px;
  background-color: #fff;
  border-radius: 4px;
}

.comment-input {
  flex: 1;
  height: 36px;
  padding: 6px 0;
  font-size: 14px;
}

.send-btn {
  width: 60px;
  height: 32px;
  line-height: 32px;
  background-color: #1aad19;
  color: #fff;
  font-size: 14px;
  border-radius: 4px;
  padding: 0;
  margin: 0 0 0 8px;
}

.btn-hover {
  opacity: 0.8;
}

/* 无评论状态 */
.no-comment {
  padding: 40px 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}

/* 评论错误状态 */
.comment-error {
  padding: 40px 0;
  text-align: center;
  font-size: 14px;
  color: #ff4d4f;
}

/* 加载更多 */
.loading-more {
  padding: 16px 0;
  text-align: center;
}

/* 底部安全区域，为输入框留出空间 */
.bottom-safe-area {
  width: 100%;
  height: 70px;
}