/* pages/post/detail/detail.wxss */
page {
  background-color: #f7f7f7;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 顶部安全区域 */
.safe-area-top {
  width: 100%;
  background-color: #fff;
  z-index: 1000;
}

/* 顶部导航栏 */
.header {
  position: fixed;
  left: 0;
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
  background-color: #fff;
  z-index: 100;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.back-icon {
  width: 48px;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

/* 帖子内容 */
.post-detail {
  margin: 0;
  padding: 16px;
  border-radius: 0;
  box-shadow: none;
  background-color: #fff;
}

/* 评论区域 */
#commentList {
  margin-top: 8px;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
  padding: 20px;
}

.error-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.error-text {
  font-size: 16px;
  color: #ff4d4f;
  text-align: center;
  margin-bottom: 24px;
}

.retry-btn {
  width: 120px !important;
  height: 40px;
  line-height: 40px;
  background-color: #07c160;
  color: #fff;
  border-radius: 20px;
  font-size: 14px;
  margin-bottom: 12px;
}

.close-btn {
  width: 120px !important;
  height: 40px;
  line-height: 40px;
  background-color: #f7f7f7;
  color: #666;
  border: 1px solid #e0e0e0;
  border-radius: 20px;
  font-size: 14px;
}

/* 评论区域 */
.comment-section {
  padding: 16px;
  background-color: #f6f6f6;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
}

/* 评论输入框 */
.comment-input-container {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 8px 12px;
  background-color: #fff;
  border-radius: 4px;
}

.comment-input {
  flex: 1;
  height: 36px;
  padding: 6px 0;
  font-size: 14px;
}

.send-btn {
  width: 60px;
  height: 32px;
  line-height: 32px;
  background-color: #1aad19;
  color: #fff;
  font-size: 14px;
  border-radius: 4px;
  padding: 0;
  margin: 0 0 0 8px;
}

.btn-hover {
  opacity: 0.8;
}

/* 无评论状态 */
.no-comment {
  padding: 40px 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}

/* 评论错误状态 */
.comment-error {
  padding: 40px 0;
  text-align: center;
  font-size: 14px;
  color: #ff4d4f;
}

/* 加载更多 */
.loading-more {
  padding: 16px 0;
  text-align: center;
}

/* 底部安全区域，为输入框留出空间 */
.bottom-safe-area {
  width: 100%;
  height: 70px;
}