/* pages/post/detail/detail.wxss */

.post-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  margin-top: 90rpx;
  padding: 12rpx;
}

/* 帖子详情样式 */
.post-detail {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  /* 确保样式能够正确应用到post-item组件 */
  width: 100%;
  box-sizing: border-box;
}

/* 评论列表容器样式 */
.comment-list-container {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 0rpx;
}
