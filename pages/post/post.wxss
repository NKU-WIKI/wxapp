.post-container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.post-header {
  margin-bottom: 20px;
}

.header-title {
  font-size: 20px;
  font-weight: bold;
}

.post-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-item {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
}

.title-input {
  background: #fff;
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.image-uploader {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-btn text {
  font-size: 60rpx;
}

.upload-btn .tip {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

.visibility-selector {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

.radio-item {
  margin-right: 40rpx;
}

.publish-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.publish-btn.disabled {
  background: #ccc;
}

.submit-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  background-color: #cccccc;  /* 默认灰色 */
  color: #ffffff;
  font-size: 32rpx;
  margin: 40rpx auto;
}

.submit-btn-active {
  background-color: #07c160;  /* 启用时的绿色 */
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 0;
}

.word-count.warn {
  color: #ff5252;
}

.warn-text {
  margin-left: 10rpx;
} 