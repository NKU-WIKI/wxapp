/* 页面容器 */
.post-container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

/* 标题输入框 */
.title-input {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.title-input input {
  font-size: 36rpx;
  font-weight: 500;
}

/* 内容输入区域 */
.content-input {
  margin-bottom: 30rpx;
}

.content-input textarea {
  width: 100%;
  height: 300rpx;
  font-size: 30rpx;
  line-height: 1.6;
}

/* 发布设置 */
.post-setting {
  margin: 40rpx 0;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 60rpx;
  background-color: #07c160;
  color: #fff;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  position: relative;
}

.submit-btn.disabled {
  background-color: #ccc;
}

.submit-btn text {
  margin-left: 10rpx;
}

/* 自定义上传组件样式 */
.weui-uploader__title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.weui-uploader__bd {
  margin-bottom: -20rpx;
}

.weui-uploader__file {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.weui-uploader__img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.error-msg {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

