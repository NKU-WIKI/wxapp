/* 页面容器 */
.post-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 18px;
  font-weight: 500;
  text-align: center;
  flex: 1;
}

.post-btn {
  background-color: #5853e2;
  color: #fff;
  font-size: 14px;
  padding: 0 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  font-weight: normal;
}

.post-btn.disabled {
  background-color: #c0c0c0;
  color: #fff;
}

/* 模式切换 */
.mode-switch {
  display: flex;
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.mode-item.active {
  color: #5853e2;
  font-weight: 500;
}

.mode-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background-color: #5853e2;
  border-radius: 2rpx;
}

/* 表单区域 */
.post-form {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 16px;
  border-bottom: 1px solid #eee;
  padding: 24rpx 0;
  width: 100%;
}

.post-content {
  width: 100%;
  height: 300rpx;
  font-size: 15px;
  line-height: 1.5;
  padding: 24rpx 0;
}

.post-content.markdown-editor {
  height: 400rpx;
  font-family: 'Courier New', Courier, monospace;
  padding: 24rpx 0;
}

.markdown-content {
  min-height: 200rpx;
  padding: 24rpx 0;
  border: 1px solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fafafa;
}

/* 工具栏 */
.toolbar {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  align-items: center;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.tool-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.tool-icon {
  font-weight: bold;
  font-size: 16px;
  color: #333;
  line-height: 1;
}

.tool-item.active {
  background-color: #5853e2;
  border-radius: 8rpx;
}

.tool-item.active icon,
.tool-item.active .tool-icon {
  color: #fff;
}

/* 图片预览 */
.image-preview-list {
  margin-top: 20rpx;
}

.preview-title {
  font-size: 14px;
  color: #999;
  margin-bottom: 10rpx;
}

.preview-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.preview-item {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.preview-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分类选择 */
.category-section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.category-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.category-item {
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  padding: 12rpx 0;
  background-color: #f8f8f8;
  transition: all 0.3s;
}

.category-text {
  font-size: 11px;
  color: #666;
  margin-top: 4rpx;
  text-align: center;
}

.category-item.active {
  background-color: #f0f0ff;
  border: 1px solid #5853e2;
}

.category-item.active .category-text {
  color: #5853e2;
  font-weight: 500;
}

/* 标签栏样式 */
.tag-section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.tag-item.active {
  background-color: #5853e2;
  color: #ffffff;
  font-weight: 500;
}

.tag-item.add-custom {
  background: #fff;
  border: 1px dashed #ddd;
  color: #999;
}

.tag-input-container {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 30rpx;
  padding: 8rpx 12rpx;
  margin-top: 20rpx;
  background: #f7f7f7;
}

.tag-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding-left: 8rpx;
}

.tag-add-btn {
  padding: 8rpx 24rpx;
  background: #5853e2;
  color: #fff;
  font-size: 26rpx;
  border-radius: 24rpx;
}

.tag-tips {
  font-size: 24rpx;
  color: #999;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

/* 底部设置 */
.post-settings {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 100rpx;
}

.settings-title {
  font-size: 15px;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

.setting-group {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background-color: #f8f8f8;
  width: 30%;
  box-sizing: border-box;
  transition: all 0.3s;
}

.setting-text {
  margin-left: 8rpx;
  font-size: 13px;
  color: #666;
}

.setting-item.active {
  background-color: #5853e2;
}

.setting-item.active icon {
  color: #fff;
}

.setting-item.active .setting-text {
  color: #fff;
}

/* Wiki小知识开关样式 */
.wiki-item {
  justify-content: space-between;
  padding: 12rpx 16rpx;
  height: 70rpx;
  background-color: transparent;
}

.wiki-label {
  display: flex;
  align-items: center;
}

.wiki-label text {
  font-size: 13px;
  margin-left: 8rpx;
}

/* 加载中状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-content text {
  font-size: 14px;
  color: #666;
}

/* 自定义上传组件样式 */
.weui-uploader__title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.weui-uploader__bd {
  margin-bottom: -20rpx;
}

.weui-uploader__file {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.weui-uploader__img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.error-msg {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

