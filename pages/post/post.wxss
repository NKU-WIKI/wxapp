/* 页面容器 */
.post-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 18px;
  font-weight: 500;
  text-align: center;
  flex: 1;
}

.post-btn {
  background-color: #5853e2;
  color: #fff;
  font-size: 14px;
  padding: 0 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  font-weight: normal;
}

.post-btn.disabled {
  background-color: #c0c0c0;
  color: #fff;
}

/* 表单区域 */
.post-form {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 16px;
  border-bottom: 1px solid #eee;
  padding: 24rpx 0;
  width: 100%;
}

.post-content {
  width: 100%;
  height: 300rpx;
  font-size: 15px;
  line-height: 1.5;
  padding: 24rpx 0;
}

/* 工具栏 */
.toolbar {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  align-items: center;
}

.tool-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.tool-icon {
  font-weight: bold;
  font-size: 16px;
  color: #666;
}

.tool-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.wiki-tool {
  display: flex;
  align-items: center;
  background-color: #f0f0ff;
  color: #5853e2;
  font-size: 14px;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-left: auto;
}

.wiki-tool text {
  margin-left: 8rpx;
}

/* 话题选择 */
.topic-section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 24rpx;
}

.section-title {
  font-size: 15px;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.topic-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
}

.topic-tag.active {
  background-color: #e0e0ff;
  color: #5853e2;
}

.add-topic-tag {
  font-size: 14px;
  color: #5853e2;
  background-color: #f0f0ff;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
}

/* Wiki润色建议 */
.wiki-section {
  margin-bottom: 20rpx;
  background-color: #f0f0ff;
  padding: 24rpx;
  border-radius: 8rpx;
  margin: 0 20rpx 20rpx;
}

.wiki-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.wiki-title {
  display: flex;
  align-items: center;
  font-size: 15px;
  font-weight: 500;
  color: #5853e2;
}

.wiki-title text {
  margin-left: 8rpx;
}

.wiki-apply {
  font-size: 14px;
  color: #5853e2;
  font-weight: 500;
}

.wiki-suggestions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.wiki-suggestions text {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

/* 文风选择 */
.style-section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 24rpx;
}

.style-options {
  display: flex;
  gap: 16rpx;
}

.style-option {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.style-option.active {
  background-color: #5853e2;
  color: #fff;
}

/* 底部设置 */
.post-settings {
  background-color: #fff;
  padding: 24rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item text {
  font-size: 15px;
  color: #333;
}

/* 加载中 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-content text {
  font-size: 14px;
  color: #666;
}

/* 自定义上传组件样式 */
.weui-uploader__title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.weui-uploader__bd {
  margin-bottom: -20rpx;
}

.weui-uploader__file {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.weui-uploader__img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.error-msg {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

