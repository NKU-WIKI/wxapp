/* 页面容器 */
.post-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 30rpx;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 6rpx 16rpx rgba(88, 83, 226, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 8rpx 20rpx rgba(88, 83, 226, 0.5);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 6rpx 16rpx rgba(88, 83, 226, 0.4);
  }
}

/* 为禁用状态添加注意动画 */
@keyframes attention {
  0% {
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 6rpx 16rpx rgba(255, 149, 0, 0.5);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.4);
  }
}

/* 表单区域 */
.post-form {
  padding: 20rpx;
  background-color: #fff;
  margin-top: 140rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.post-title {
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
  padding: 24rpx 0;
  width: 100%;
}

.post-content {
  width: 100%;
  height: 300rpx;
  font-size: 15px;
  line-height: 1.5;
  padding: 24rpx 0;
}

/* 图片预览 */
.image-preview-list {
  margin-top: 20rpx;
}

.preview-title {
  font-size: 14px;
  color: #999;
  margin-bottom: 10rpx;
}

.preview-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.preview-item {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f8f8f8;
}

.preview-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 公共部分 */
.section-container {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 24rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  color: #333;
}

/* 标签栏样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-badge {
  background-color: #f5f5f5 !important;
  color: #666 !important;
  font-size: 26rpx !important;
  font-weight: normal !important;
  padding: 12rpx 24rpx !important;
  border-radius: 30rpx !important;
  margin: 0 !important;
}

.tag-badge-active {
  background-color: #5853e2 !important;
  color: #ffffff !important;
  font-size: 26rpx !important;
  font-weight: 500 !important;
  padding: 12rpx 24rpx !important;
  border-radius: 30rpx !important;
  margin: 0 !important;
}

.tag-input-container {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 30rpx;
  padding: 8rpx 12rpx;
  margin-top: 16rpx;
  background: #f8f8f8;
}

.tag-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding-left: 12rpx;
}

.tag-add-btn {
  padding: 8rpx 24rpx;
  background: #5853e2;
  color: #fff;
  font-size: 26rpx;
  border-radius: 24rpx;
}

.tag-tips {
  font-size: 24rpx;
  color: #999;
}

/* 自定义标签列表 */
.custom-tag-list {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 分类选择 */
.category-section {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 24rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

/* 底部设置 */
.post-settings {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 24rpx 20rpx 100rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.settings-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  color: #333;
}

.setting-group {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  gap: 16rpx;
  margin-top: 12rpx;
}

/* 设置按钮样式 */
.setting-btn {
  flex: 1;
  display: flex;
  flex-direction: column !important; /* 强制使用列布局 */
  align-items: center;
  justify-content: center;
  padding: 24rpx 10rpx !important;
  border-radius: 12rpx;
  background-color: #f8f8f8 !important;
  border: 1px solid transparent !important;
  box-shadow: none;
  margin: 0 !important;
  line-height: normal !important;
  transition: all 0.2s ease;
}

/* 按钮激活状态 */
.setting-btn.active {
  background-color: #f0f0ff !important;
  border: 1px solid #5853e2 !important;
}

/* 按钮悬停状态 */
.setting-btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 按钮文本 */
.setting-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 激活按钮文本 */
.setting-btn.active .setting-text {
  color: #5853e2;
  font-weight: 500;
}

/* Wiki小知识开关样式 */
.wiki-item {
  justify-content: space-between;
  padding: 12rpx 16rpx;
  height: 70rpx;
  background-color: transparent;
}

.wiki-label {
  display: flex;
  align-items: center;
}

.wiki-label text {
  font-size: 13px;
  margin-left: 8rpx;
}

/* 提交按钮 */
.submit-btn {
  margin: 0 20rpx;
  height: 88rpx !important;
  font-size: 32rpx !important;
  border-radius: 44rpx !important;
  background: #5853e2 !important; 
  display: flex;
  align-items: center;
  justify-content: center;
  color: white !important;
  font-weight: 500 !important;
  box-shadow: 0 6rpx 16rpx rgba(88, 83, 226, 0.2);
}

/* 加载中遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx;
  border-radius: 16rpx;
}

.loading-content text {
  color: white;
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* 发布按钮容器 */
.publish-btn-container {
  padding: 20rpx;
  margin-bottom: 30rpx;
}

button[text="发布"] {
  width: 100% !important;
  margin: 0 !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  border-radius: 44rpx !important;
  background-color: #5853e2 !important;
  box-shadow: 0 4rpx 12rpx rgba(88, 83, 226, 0.3) !important;
}


