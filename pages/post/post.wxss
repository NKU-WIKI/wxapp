.loading {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: loading 0.8s linear infinite;
}

@keyframes loading {
  from {
    transform: translateY(-50%) rotate(0deg);
  }
  to {
    transform: translateY(-50%) rotate(360deg);
  }
}

page {
  background: #f5f5f5;
  min-height: 100vh;
}

.primary {
  background: #07c160;
  color: #fff;
}

.primary:active {
  opacity: 0.9;
}

.primary[disabled] {
  opacity: 0.5;
}

/* WEUI组件样式覆盖 */
.weui-form {
  padding: 0 !important;
  margin: 0 !important;
}

.weui-form__text-area {
  padding: 30rpx !important;
  margin: 0 !important;
}

.weui-form__title {
  font-size: 36rpx !important;
  font-weight: 500 !important;
}

.weui-form__control-area {
  margin: 0 !important;
}

.weui-cells {
  margin-top: 0 !important;
  background-color: #fff !important;
}

.weui-cell {
  padding: 20rpx 30rpx !important;
}

.weui-cell_active {
  background-color: #f8f8f8 !important;
}

.weui-cell__hd {
  font-size: 28rpx !important;
  color: #333 !important;
}

/* 复选框样式 */
.weui-cell_switch {
  padding-top: 12rpx !important;
  padding-bottom: 12rpx !important;
}

.weui-cells::after,
.weui-cells::before {
  display: none !important;
}

/* 上传组件样式 */
.weui-uploader {
  width: 100% !important;
}

.weui-uploader__input-box {
  margin-right: 16rpx !important;
  margin-bottom: 16rpx !important;
  width: 200rpx !important;
  height: 200rpx !important;
  border-radius: 8rpx !important;
}

.weui-uploader__file {
  margin-right: 16rpx !important;
  margin-bottom: 16rpx !important;
}

/* 图片预览样式 */
.image-preview-list {
  margin: 20rpx 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.preview-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 16rpx;
}

.preview-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.preview-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}