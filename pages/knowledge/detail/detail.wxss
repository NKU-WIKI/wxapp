/* 知识详情页样式 */
.knowledge-container {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.knowledge-content-wrapper {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  margin-top:90rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.error-icon {
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.retry-btn {
  padding: 16rpx 40rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 知识详情 */
.knowledge-detail {
  padding-bottom: 20rpx;
}

.knowledge-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 来源信息 */
.knowledge-source {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.source-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.platform-info {
  display: flex;
  flex-direction: column;
}

.platform-icon-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.platform-name {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.official-tag {
  background-color: #ff6b6b;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.author {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.original-link-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.original-link-btn {
  display: flex;
  align-items: center;
  background-color: #f0f9f4;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #07c160;
  border: 1rpx solid #d7f3e3;
  transition: all 0.3s;
  margin-bottom: 8rpx;
}

.original-link-btn:active {
  background-color: #e0f5e9;
}

.original-link-btn text {
  margin-left: 8rpx;
}

.publish-time {
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

/* 内容 */
.knowledge-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
  padding: 24rpx 0;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.content-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
  background-color: #f8f8f8;
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 底部统计信息和操作按钮 */
.knowledge-footer {
  margin: 16rpx 0 24rpx;
}

.stats-action-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.relevance {
  font-size: 24rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.footer-actions {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 8rpx;
}

.action-item text {
  margin-left: 4rpx;
  color: #999;
}

.action-item.active {
  color: #07c160;
}

.action-item.active text {
  color: #07c160;
}

/* 分隔线 */
.divider-line {
  height: 20rpx;
  background-color: #f8f8f8;
  margin: 0 -30rpx 20rpx;
}

/* 评论区域 */
.comment-list-container {
  margin-top: 20rpx;
} 