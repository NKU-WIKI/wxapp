/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.post-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-meta {
  flex: 1;
}

.username {
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.badge {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 30rpx;
}

.post-title {
  display: block;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.post-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.tags {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.tag {
  font-size: 24rpx;
  color: #007AFF;
  background: #e6f3ff;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
}

.tag.orange {
  color: #FF6A00;
  background: #fff0e6;
}

.interaction {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.like, .comment {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}