/* index.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 40px 15px 10px;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.logo {
  width: 30px;
  height: 30px;
  color: #4285f4;
}

.header .icon {
  width: 20px;
  height: 20px;
}

.search-box {
  margin: 10px 0;
  background: #f5f5f5;
  border-radius: 0;
  padding: 8px 15px;
  display: flex;
  align-items: center;
  gap: 8px;
  width: 100%;
  box-sizing: border-box;
}

.search-box input {
  flex: 1;
  font-size: 14px;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 15px;
  background: #fff;
  margin-bottom: 10px;
  width: 100%;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.nav-item image {
  width: 45px;
  height: 45px;
}

.nav-item text {
  font-size: 13px;
  color: #333;
}

.post-list {
  padding: 0;
  width: 100%;
}

.post-item {
  background: #fff;
  border-radius: 0;
  padding: 15px;
  margin-bottom: 10px;
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 16px;
  font-weight: 500;
}

.user-title {
  font-size: 12px;
  color: #999;
}

.post-content {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 10px;
}

.post-image {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 10px;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 10px;
}

.tag {
  font-size: 12px;
  color: #666;
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 4px;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-size: 12px;
  color: #999;
}

.actions {
  display: flex;
  gap: 15px;
}

.action {
  display: flex;
  align-items: center;
  gap: 4px;
}

.action image {
  width: 16px;
  height: 16px;
}

.action text {
  font-size: 12px;
  color: #999;
}

.publish-btn {
  width: 50px;
  height: 50px;
  background: #4285f4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  right: 20px;
  bottom: 20px;
  box-shadow: 0 2px 8px rgba(66, 133, 244, 0.3);
}

.publish-btn image {
  width: 28px;
  height: 40px;
}

/* 删除不需要的样式 */
.header-left, .header-right {
  display: none;
}