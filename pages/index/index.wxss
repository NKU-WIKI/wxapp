/* index.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 40px 15px 10px;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.logo {
  width: 30px;
  height: 30px;
  color: #4285f4;
}

.header .icon {
  width: 20px;
  height: 20px;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  position: relative;
  z-index: 10;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 15rpx;
}

.search-bar.full-width {
  margin-right: 0;
  width: 100%;
  padding: 15rpx 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
}

/* 导航栏样式 */
.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.nav-item image {
  width: 84rpx;
  height: 84rpx;
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
}

/* 搜索历史样式 */
.search-history {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 2rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.clear-history {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.history-item icon {
  color: #999;
}

/* 搜索结果样式 */
.search-result {
  background-color: #fff;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
}

.clear-search {
  font-size: 28rpx;
  color: #999;
}

.no-result {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.load-more {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.post-list {
  padding: 0;
  width: 100%;
  flex: 1;
}

.post-item {
  background: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  border-radius: 0;
  box-shadow: none;
  width: 100%;
  box-sizing: border-box;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.author-avatar, .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-info, .user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name, .nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.post-time, .time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.post-content-wrapper {
  margin-bottom: 15rpx;
}

.post-title, .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.post-content, .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-wrap: break-word;
}

.read-more {
  color: #07c160;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.post-images {
  margin-top: 15rpx;
}

.post-images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.post-images-grid.single-image {
  justify-content: flex-start;
}

.post-image-item {
  width: calc(33.33% - 5.33rpx);
  height: 200rpx;
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
}

.post-image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-count {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.post-tags {
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.post-tag {
  color: #07c160;
  font-size: 24rpx;
}

.divider {
  margin: 15rpx 0;
  height: 1rpx;
  background: #f0f0f0;
}

.comment-preview {
  margin-bottom: 15rpx;
}

.comment-item {
  margin-bottom: 10rpx;
}

.comment-info {
  display: flex;
  font-size: 26rpx;
  line-height: 1.5;
}

.comment-name {
  color: #07c160;
  font-weight: 500;
}

.comment-text {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.comment-images {
  display: flex;
  margin-top: 8rpx;
  gap: 8rpx;
}

.comment-images image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.view-more-comments {
  color: #07c160;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: right;
}

.post-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 15rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-item image {
  width: 32rpx;
  height: 32rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #666;
}

.action-item.active text {
  color: #07c160;
}

.loading-status {
  padding: 30rpx;
  text-align: center;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.loading-more image {
  width: 40rpx;
  height: 40rpx;
}

.loading-more text, .no-more {
  font-size: 26rpx;
  color: #999;
}

.post-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.post-btn image {
  width: 50rpx;
  height: 50rpx;
}

.comment-input-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.comment-input-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.comment-input-box {
  position: relative;
  background: #fff;
  padding: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 1001;
}

.comment-input-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.comment-input-header text {
  font-size: 28rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 36rpx;
}

textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 15rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.selected-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 15rpx;
}

.image-item {
  width: calc(20% - 12rpx);
  height: 120rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-image {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.add-image {
  width: calc(20% - 12rpx);
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.add-image text {
  font-size: 48rpx;
  color: #999;
}

.add-image-btn {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  gap: 10rpx;
}

.add-image-btn image {
  width: 40rpx;
  height: 40rpx;
}

.add-image-btn text {
  font-size: 28rpx;
  color: #666;
}

.comment-submit-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.expand-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.expand-btn image {
  width: 40rpx;
  height: 40rpx;
}

.submit-btn {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
}

/* 已激活的操作按钮 */
.action-item.active image {
  filter: brightness(1.2) drop-shadow(0 0 2px rgba(76, 175, 80, 0.3));
}

/* 激活状态下的文本 */
.active-text {
  color: #4CAF50 !important;
  font-weight: bold;
}
