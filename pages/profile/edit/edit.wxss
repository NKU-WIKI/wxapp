/* pages/profile/edit/edit.wxss */
page {
  background: #f5f5f5;
  min-height: 100vh;
}

.edit-container {
  padding: 20rpx;
}

/* 头像编辑区域 */
.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  object-fit: cover;
  background-color: #f0f0f0;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 清除按钮默认样式 */
.avatar-btn {
  background: none;
  padding: 0;
  margin: 0;
  border: none;
  outline: none;
  line-height: normal;
  border-radius: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 去除按钮hover效果 */
.avatar-btn::after {
  border: none;
}

.avatar-btn:not([size='mini']) {
  width: auto;
  min-height: 0;
}

/* WEUI样式覆盖 - 只保留特定于此页面的覆盖 */
.weui-btn {
  width: 90% !important;
  margin: 60rpx auto 40rpx !important;
}