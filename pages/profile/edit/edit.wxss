/* pages/profile/edit/edit.wxss */
page {
  background: #f8f8f8;
  min-height: 100vh;
}

.container {
  padding-bottom: 40rpx;
}

.content-area {
  padding: 0 20rpx;
}

/* 头像编辑区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.avatar-wrapper {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50% !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper:after {
  border: none !important;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.avatar-hint {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 按钮区域 */
.button-area {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-button {
  width: 100% !important;
  background: #07c160 !important;
  color: #fff !important;
}

/* 基本资料标题 */
.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin: 40rpx 0 20rpx 12rpx;
}

/* 新增自定义插槽样式 */
.custom-field {
  padding: 24rpx;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
}