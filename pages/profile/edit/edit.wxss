/* pages/profile/edit/edit.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  width: 100%;
  height: 100%;
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background: transparent;
  position: relative;
}

/* 添加动态背景粒子效果 - 与主页面保持一致 */
.container::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient(
      circle at 20% 80%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 40% 40%,
      rgba(255, 255, 255, 0.05) 0%,
      transparent 50%
    );
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0px) rotate(0deg);
  }
  33% {
    transform: translateY(-30px) rotate(2deg);
  }
  66% {
    transform: translateY(15px) rotate(-1deg);
  }
}

/* 背景样式 - 与"我的"页面保持一致 */
.profile-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.gradient-bg {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.pattern-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(
      circle at 20% 50%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 40% 80%,
      rgba(255, 255, 255, 0.05) 0%,
      transparent 50%
    );
}

.content-area {
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
  margin-top: 100rpx;
  padding-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 头像卡片 - 增强版 */
.avatar-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 32rpx;
  overflow: hidden;
  animation: slideInUp 0.6s ease-out;
  animation-fill-mode: both;
  position: relative;
}

/* 为头像卡片添加渐变边框效果 */
.avatar-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.1),
    rgba(118, 75, 162, 0.1)
  );
  border-radius: 32rpx;
  pointer-events: none;
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(60rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 头像编辑区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  position: relative;
  z-index: 2;
}

.avatar-container {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar-wrapper {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50% !important;
  overflow: hidden !important;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  position: relative !important;
  transition: all 0.3s ease;
}

.avatar-wrapper:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

.avatar-wrapper.uploading {
  opacity: 0.7;
}

.avatar-wrapper:after {
  border: none !important;
}

.avatar-ring {
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
  bottom: -16rpx;
  border: 3rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.3;
  }
}

.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.edit-avatar-btn {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 15;
}

/* 头像图标样式 */
.avatar-icon {
  width: 100% !important;
  height: 100% !important;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-info {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 2rpx;
  letter-spacing: 0.5rpx;
}

.user-id {
  font-size: 22rpx;
  color: #8799a3;
  opacity: 0.8;
  background: rgba(102, 126, 234, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-bottom: 6rpx;
}

.avatar-hint {
  font-size: 24rpx;
  color: #636e72;
  font-weight: 400;
  opacity: 0.8;
}

/* 表单区域 */
.form-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 0.5rpx;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
  animation: slideInUp 0.6s ease-out 0.2s both;
  position: relative;
}

/* 为表单卡片添加渐变边框效果 */
.form-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.08),
    rgba(118, 75, 162, 0.08)
  );
  border-radius: 24rpx;
  pointer-events: none;
}

/* 按钮区域优化 */
.button-area {
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.save-button {
  width: 100% !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: #fff !important;
  border-radius: 48rpx !important;
  height: 96rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4) !important;
  transition: all 0.3s ease !important;
  border: none !important;
  position: relative !important;
  overflow: hidden !important;
}

.save-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: left 0.5s ease;
}

.save-button:active::before {
  left: 100%;
}

.save-button:active {
  transform: translateY(2rpx) !important;
  box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.3) !important;
}

/* 基本资料标题 */
.section-title {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 600;
  margin: 32rpx 24rpx 20rpx;
  letter-spacing: 0.5rpx;
}

/* 表单组增强样式 */
.custom-field {
  padding: 32rpx 24rpx;
  background: #fff;
  margin: 0;
  border-radius: 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.custom-field:last-child {
  border-bottom: none;
}

.custom-field:hover {
  background: rgba(102, 126, 234, 0.02);
}

/* 手动表单样式优化 */
.manual-form {
  background: transparent;
  border-radius: 0;
  padding: 0;
  margin-top: 0;
}
.manual-group {
  margin-bottom: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.manual-group:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.manual-group .group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 0;
  padding: 20rpx 32rpx 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f4 100%);
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.manual-group .group-title::before {
  content: "";
  width: 6rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
}

.manual-field {
  margin-bottom: 0;
  padding: 12rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.manual-field:last-child {
  border-bottom: none;
}

.manual-field:hover {
  background: rgba(102, 126, 234, 0.02);
}

.field-label {
  font-size: 28rpx;
  color: #636e72;
  margin-bottom: 6rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.field-label::before {
  content: "";
  width: 4rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  opacity: 0.7;
}

.field-input {
  width: 100%;
  height: 64rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 0 16rpx;
  font-size: 30rpx;
  color: #2d3436;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.field-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.field-input::placeholder {
  color: #bdc3c7;
  font-size: 28rpx;
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .avatar-wrapper {
    width: 200rpx !important;
    height: 200rpx !important;
  }

  .avatar-ring {
    top: -16rpx;
    left: -16rpx;
    right: -16rpx;
    bottom: -16rpx;
  }

  .user-name {
    font-size: 32rpx;
  }

  .section-title {
    font-size: 28rpx;
  }

  .manual-group .group-title {
    font-size: 28rpx;
    padding: 24rpx 24rpx 16rpx;
  }

  .manual-field {
    padding: 20rpx 24rpx;
  }
}

/* 加载和错误状态优化 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: rgba(255, 255, 255, 0.8);
}

.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 深色模式适配 */
.edit-container.dark-mode .avatar-card,
.edit-container.dark-mode .form-card,
.edit-container.dark-mode .manual-group {
  background: rgba(0, 0, 0, 0.8);
  color: white;
}

.edit-container.dark-mode .user-name,
.edit-container.dark-mode .section-title,
.edit-container.dark-mode .group-title {
  color: white;
}

.edit-container.dark-mode .user-id,
.edit-container.dark-mode .avatar-hint,
.edit-container.dark-mode .field-label {
  color: rgba(255, 255, 255, 0.7);
}

.edit-container.dark-mode .field-input {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
  color: white;
}

.edit-container.dark-mode .field-input:focus {
  background: rgba(255, 255, 255, 0.15);
  border-color: #667eea;
}
