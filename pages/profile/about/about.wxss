.container {
  padding: 0;
  background: #fff;
  min-height: 100vh;
}

.about-card {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  padding: 60rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.version {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.info-list {
  padding: 40rpx 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.content {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
}

.copyright {
  position: relative;
  margin-top: 60rpx;
  padding: 40rpx 0;
}

.copyright text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 2;
}

.about-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: #666;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0 40rpx;
}

.refresh-btn {
  padding: 16rpx 40rpx;
  background-color: #007AFF;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 正常内容区域样式 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 28rpx;
  color: #666;
}

.company-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.content {
  font-size: 32rpx;
  color: #333;
  display: block;
}

/* 点击效果 */
.info-item[bindtap] {
  position: relative;
}

.info-item[bindtap]:active {
  background-color: #f9f9f9;
}

.info-item[bindtap]::after {
  content: "";
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: translateY(-50%) rotate(45deg);
}

.company-intro {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.intro-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.intro-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.section-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.platform-item,
.contribution-item {
  margin-bottom: 30rpx;
  padding-left: 20rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 15rpx;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.list-item {
  margin: 10rpx 0;
  padding-left: 10rpx;
}

.highlight {
  color: #ff4d4f;
  font-weight: bold;
}

.copyright {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.copyright text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.8;
} 