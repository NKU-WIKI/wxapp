page {
  background: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

.about-card {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  padding: 60rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.version {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.about-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  padding: 16rpx 0;
  white-space: pre-wrap;
}

.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 40rpx 0;
  margin-top: 20rpx;
}