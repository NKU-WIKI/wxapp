<view class="about-container">
  <!-- 加载中提示 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 错误提示 -->
  <view class="error-container" wx:elif="{{error}}">
    <icon type="warn" size="64"></icon>
    <text class="error-text">获取信息失败</text>
    <button class="refresh-btn" bindtap="refresh">重新加载</button>
  </view>

  <!-- 内容区域 -->
  <block wx:else>
    <!-- Logo区域 -->
    <view class="logo-section">
      <image class="logo" src="/assets/icons/logo.png" mode="aspectFit"></image>
      <text class="app-name">nkuwiki</text>
      <text class="version">版本 1.0.0</text>
    </view>

    <!-- 公司信息区域 -->
    <view class="company-info">
      <view class="info-item">
        <text class="label">公司名称</text>
        <text class="content">{{companyInfo.name}}</text>
      </view>
      
      <view class="info-item">
        <text class="label">联系地址</text>
        <text class="content">{{companyInfo.address}}</text>
      </view>
      
      <view class="info-item" bindtap="contactUs">
        <text class="label">联系邮箱</text>
        <text class="content">{{companyInfo.email}}</text>
      </view>
    </view>

    <!-- 项目介绍 -->
    <view class="company-intro">
      <view class="intro-title">项目介绍</view>
      <view class="intro-content">
        <!-- 服务平台部分 -->
        <view class="section">
          <view class="section-title">服务平台</view>
          
          <view class="platform-item" wx:for="{{platforms}}" wx:key="title">
            <view class="item-title">{{index + 1}}. {{item.title}}</view>
            <view class="item-content">
              <block wx:if="{{item.items && item.items.length > 0}}">
                <view class="list-item" wx:for="{{item.items}}" wx:key="*this" wx:for-item="subItem">
                  • {{subItem}}
                </view>
              </block>
              <block wx:elif="{{item.description}}">
                {{item.description}}
              </block>
            </view>
          </view>
        </view>

        <!-- 参与方式部分 -->
        <view class="section">
          <view class="section-title">参与方式</view>
          <view class="section-subtitle">（根据项目进度动态更新中）</view>

          <view class="contribution-item" wx:for="{{contributions}}" wx:key="title">
            <view class="item-title">{{index + 1}}. {{item.title}}</view>
            <view class="item-content">{{item.description}}</view>
          </view>
        </view>
      </view>
    </view>

    <!-- 版权信息 -->
    <view class="copyright">
      <text>Copyright © {{currentYear}} {{companyInfo.name}}</text>
      <text>All Rights Reserved</text>
    </view>
  </block>
</view>