/* Hover效果（支持的设备） - 通过类名控制 */
.profile-container.hover-enabled .feature-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
}

.profile-container.hover-enabled .login-btn:hover {
  box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.5);
}

/* 减少动画在低性能设备上的开销 - 针对具体元素 */
.profile-container.reduced-motion .enhanced-user-card,
.profile-container.reduced-motion .menu-card,
.profile-container.reduced-motion .gradient-bg,
.profile-container.reduced-motion .pattern-overlay {
  animation-duration: 0.01s !important;
  animation-iteration-count: 1 !important;
  transition-duration: 0.01s !important;
}

/* 优化GPU渲染 */
.gradient-bg,
.pattern-overlay,
.enhanced-user-card,
.settings-card {
  transform: translateZ(0);
  /* backface-visibility: hidden; */ /* 微信小程序不支持backface-visibility */
}

