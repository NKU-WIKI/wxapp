/* 样式表 */
page {
  background: #f8f8f8;
  min-height: 100vh;
}

.container {
  padding-bottom: 40rpx;
  min-height: 100vh;
}

/* 解决page-status组件的高度问题 */
.container > page-status {
  min-height: calc(100vh - 180rpx);
  display: block;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.settings-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 菜单区域样式 */
.menu-section {
  margin: 30rpx 30rpx;
  background: transparent;
}

.menu-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx 10rpx;
  font-weight: 500;
}

.menu-cells {
  background: #fff !important;
  border-radius: 12rpx;
  margin-top: 0 !important;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-text {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #333;
}

.menu-item-right {
  color: #999;
  font-size: 28rpx;
}

.menu-value {
  margin-right: 10rpx;
}

/* 加载和错误状态样式 */
.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.error-text {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}

.error-btn {
  margin-top: 20rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background: #1890ff;
  border-radius: 35rpx;
}

/* weui样式覆盖 */
.weui-cell {
  padding: 24rpx 30rpx !important;
}

.weui-cell__bd {
  font-size: 30rpx !important;
}

.weui-cell::after {
  left: 30rpx !important;
  right: 30rpx !important;
}

.weui-cell__ft_in-access {
  padding-right: 0 !important; 
  font-size: 28rpx !important;
}