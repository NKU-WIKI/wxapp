/* 样式表 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background: transparent;
  position: relative;
}

/* 添加动态背景粒子效果 */
.container::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient(
      circle at 20% 80%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 40% 40%,
      rgba(255, 255, 255, 0.05) 0%,
      transparent 50%
    );
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0px) rotate(0deg);
  }
  33% {
    transform: translateY(-30px) rotate(2deg);
  }
  66% {
    transform: translateY(15px) rotate(-1deg);
  }
}

/* 内容区域样式 */
.content-area {
  flex: 1;
  padding: 0;
  background: transparent;
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 登录状态样式 */
.login-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh; /* 简化为固定高度，微信小程序不支持calc() */
  padding: 40rpx;
  box-sizing: border-box;
}

.login-card {
  position: relative;
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  /* backdrop-filter: blur(20rpx); */ /* 微信小程序不支持，使用半透明背景替代 */
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.gradient-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  opacity: 0.1;
}

.feature-section {
  position: relative;
  padding: 48rpx;
  background: transparent;
}

.feature-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  text-align: center;
}

.avatar-container {
  position: relative;
  margin-bottom: 32rpx;
}

.avatar-icon {
  position: relative;
  z-index: 2;
  color: #667eea;
  /* filter: drop-shadow(0 8rpx 16rpx rgba(102, 126, 234, 0.3)); */ /* 微信小程序不支持，使用box-shadow替代 */
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.avatar-ring {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.3;
  }
}

.feature-texts {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.feature-subtitle {
  font-size: 28rpx;
  color: #636e72;
  line-height: 1.4;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 48rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.feature-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.1),
    rgba(240, 147, 251, 0.1)
  );
}

.feature-text {
  font-size: 26rpx;
  color: #2d3436;
  font-weight: 500;
}

.login-section {
  padding: 48rpx;
  padding-top: 0;
}

.login-btn {
  width: 100% !important;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border-radius: 48rpx;
  border: none;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  gap: 12rpx;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-btn:hover {
  box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.5);
}

.login-btn-text {
  color: white;
}

/* 已登录状态样式 */
.profile-header {
  position: relative;
  margin-bottom: 24rpx;
}

.profile-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 320rpx;
  overflow: hidden;
}

.gradient-bg {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.pattern-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(
      circle at 20% 50%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 40% 80%,
      rgba(255, 255, 255, 0.05) 0%,
      transparent 50%
    );
}

.enhanced-user-card {
  position: relative;
  z-index: 2;
  margin: 0 24rpx;
  padding-top: 160rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  /* backdrop-filter: blur(20rpx); */ /* 微信小程序不支持，使用半透明背景替代 */
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
}

/* 为用户卡片添加渐变边框效果 */
.enhanced-user-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.1),
    rgba(118, 75, 162, 0.1)
  );
  border-radius: 24rpx;
  pointer-events: none;
}

/* 菜单区域 */
.menu-section {
  padding: 0 24rpx 40rpx;
  background: transparent;
  margin-top: -12rpx; /* 缩小与用户卡片的间距 */
}

/* 设置菜单卡片 */
.settings-card {
  background: rgba(255, 255, 255, 0.95);
  /* backdrop-filter: blur(20rpx); */ /* 微信小程序不支持，使用半透明背景替代 */
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  animation: slideInUp 0.6s ease-out;
  animation-fill-mode: both;
  animation-delay: 0.1s;
  margin-top: 8rpx; /* 减少上边距 */
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(60rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  position: relative;
}

.card-header::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 32rpx;
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(102, 126, 234, 0.2),
    transparent
  );
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  letter-spacing: 0.5rpx;
}

/* 设置菜单卡片 */
.settings-card {
  background: rgba(255, 255, 255, 0.95);
  /* backdrop-filter: blur(20rpx); */ /* 微信小程序不支持，使用半透明背景替代 */
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
