}

/* 增强的设置菜单样式 */
.enhanced-menu {
  background: transparent !important;
  padding: 0 !important;
}

.enhanced-menu .simple-menu-list {
  background: transparent;
  box-shadow: none;
  border-radius: 0;
  overflow: visible;
}

.enhanced-menu .simple-menu-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: none;
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
}

.enhanced-menu .simple-menu-item:last-child {
  margin-bottom: 0;
}

.enhanced-menu .simple-menu-item:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  background: #f8f9fa;
}

.enhanced-menu .menu-item {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: none;
  padding: 20rpx 24rpx;
  border-bottom: none;
}

.enhanced-menu .menu-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.enhanced-menu .menu-item-left icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
}

/* 不同菜单项的彩色图标背景 */
.enhanced-menu .simple-menu-item:nth-child(1) icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.enhanced-menu .simple-menu-item:nth-child(2) icon {
  background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 100%);
}

.enhanced-menu .simple-menu-item:nth-child(3) icon {
  background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
}

.enhanced-menu .simple-menu-item:nth-child(4) icon {
  background: linear-gradient(135deg, #e17055 0%, #f39c12 100%);
}

.enhanced-menu .simple-menu-item:nth-child(5) icon {
  background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
}

.enhanced-menu .simple-menu-item:nth-child(6) icon {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
}

.enhanced-menu .simple-menu-item:nth-child(7) icon {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
}

.enhanced-menu .simple-menu-item:nth-child(8) icon {
  background: linear-gradient(135deg, #81ecec 0%, #74b9ff 100%);
}

.enhanced-menu .menu-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #2d3436;
  margin-left: 0;
}

.enhanced-menu .extra-text {
  font-size: 26rpx;
  color: #636e72;
  margin-right: 12rpx;
}

.enhanced-menu .menu-item-right icon {
  background: none !important;
  width: auto !important;
  height: auto !important;
  margin-right: 0 !important;
  color: #ddd !important;
  font-size: 24rpx !important;
}

/* 徽章样式增强 */
.enhanced-menu .badge {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: 12rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(253, 121, 168, 0.3);
}

/* 菜单项的微妙装饰 */
.enhanced-menu .simple-menu-item::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.enhanced-menu .simple-menu-item:active::before {
  opacity: 1;
}

/* 响应式设计优化 */
@media (max-width: 750rpx) {
  .feature-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }

  .enhanced-menu .menu-item {
    padding: 18rpx 20rpx;
  }

  .enhanced-menu .menu-item-left icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
  }

  .enhanced-menu .menu-text {
    font-size: 30rpx;
  }
}

