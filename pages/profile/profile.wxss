/* 样式表 */
page {
  background-color: #f7f7f7;
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
}

/* 内容区域样式 */
.content-area {
  flex: 1;
  padding: 30rpx 10rpx 30rpx;
}


/* WebKit样式 */
/* 滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.login-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

.login-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
}

.feature-section {
  width: 100%;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.feature-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-icon {
  font-size: 120rpx;
  color: #666;
  margin-right: 16rpx;
}

.feature-texts {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-subtitle {
  font-size: 28rpx;
  color: #666;
}

.feature-list {
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-item icon {
  font-size: 48rpx;
}

.feature-item text {
  font-size: 28rpx;
  color: #666;
}

.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160 !important;
  border-radius: 44rpx;
  margin-bottom: 24rpx;
  padding: 0;
  color: #fff;
  font-size: 32rpx;
}
