/* 页面容器 */
.container {
  padding: 30rpx;
  background: #f8f9fa;
}

/* 页面头部 */
.page-header {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 表单区块 */
.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.radio-item.active {
  background-color: #e8f7ee;
  border: 1rpx solid #07c160;
}

.radio-item icon {
  margin-right: 10rpx;
}

.radio-item text {
  font-size: 28rpx;
  color: #333333;
}

/* 图片上传区 */
.uploader-container {
  padding: 20rpx 0;
}

/* 页脚区域 */
.footer {
  padding: 40rpx 30rpx;
  margin-top: auto;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  opacity: 0.8;
}

/* 设备信息样式 */
.device-info {
  padding: 24rpx;
  margin-top: 30rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.device-info .info-label {
  font-size: 28rpx;
  color: #666;
}

.device-info .info-text {
  font-size: 26rpx;
  color: #999;
}