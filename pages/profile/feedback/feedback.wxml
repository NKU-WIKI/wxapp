<!-- 顶部消息提示 -->
<mp-toptips msg="{{toptipsMsg}}" type="{{toptipsType}}" show="{{toptipsShow}}"/>

<!-- 页面容器 -->
<view class="container">
  <view class="page-header">
    <text class="page-title">意见反馈</text>
    <text class="page-subtitle">遇到问题？告诉我们改进</text>
  </view>

  <form-panel
    id="feedbackForm"
    title="反馈信息"
    fields="{{formFields}}"
    submitText="提交反馈"
    bind:change="onFormChange"
    bind:submit="onFormSubmit"
  >
    <!-- 自定义设备信息展示 -->
    <view slot="footer" class="device-info">
      <text class="info-label">设备信息：</text>
      <text class="info-text">{{deviceInfo.model}} ({{deviceInfo.system}})</text>
    </view>
  </form-panel>
</view> 