<!-- 顶部标题栏和标签栏 -->
<!-- 导航栏 -->
<nav-bar
    title="我的内容"
    show-back="{{true}}"
/>
  
<!-- 标签栏 -->
<tab-bar 
  tabs="{{tabTitles}}" 
  activeTab="{{tabIndex}}" 
  bind:change="onSwitchTab"
  equalWidth="{{true}}"
  fixed="{{true}}"
/>
<view class="container">
  <!-- 内容区域 -->
  <view class="content-area">
    <!-- 我的帖子 -->
    <post-list
      id="postList"
      wx:if="{{tabIndex === 0}}"
      filter="{{postFilter}}"
      empty-text="您还没有发布任何帖子"
    ></post-list>

    <!-- 我的收藏 -->
    <post-list
      id="favoriteList"
      wx:if="{{tabIndex === 1}}"
      filter="{{favoriteFilter}}"
      empty-text="您还没有收藏任何帖子"
    ></post-list>

    <!-- 我的关注 -->
    <user-list
      id="followingList"
      wx:if="{{tabIndex === 2}}"
      filter="{{followingFilter}}"
      empty-text="您还没有关注任何用户"
      bindfollow="onUserFollow"
    ></user-list>

    <!-- 我的粉丝 -->
    <user-list
      id="followerList"
      wx:if="{{tabIndex === 3}}"
      filter="{{followerFilter}}"
      empty-text="您还没有任何粉丝"
      bindfollow="onUserFollow"
    ></user-list>

  
  </view>
</view>
