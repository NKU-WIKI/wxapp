<!-- profile.wxml -->
<view class="container">
  <!-- 自定义导航栏 -->
  <nav-bar 
    nav-buttons="{{navButtons}}"
    bind:navEvent="onCustomNavEvent"
  ></nav-bar>

  <!-- 内容区域 -->
  <view class="content-area">
    <!-- 用户卡片 - 直接使用其内置的cell-status -->
    <user-card
      userInfo="{{userInfo}}"
      stats="{{stats}}"
      isCurrentUser="{{true}}"
      currentUserOpenid="{{userInfo.openid}}"
      loading="{{loading}}"
      error="{{error}}"
      errorMsg="{{errorMsg}}"
      bind:edit="navigateToEditProfile"
      bind:retry="onRetry"
    />

    <!-- 未登录提示 - 如果用户卡片不显示，则需要单独处理 -->
    <view wx:if="{{!loading && !error && !userInfo}}" class="login-wrapper">
      <login-card bind:login="login" />
    </view>

    <!-- 功能菜单 -->
    <menu-list
      title="{{MENU_CONFIG.CONTENT.title}}"
      items="{{menuItems}}" 
      loading="{{loading}}"
      error="{{error}}"
      errorMsg="{{errorMsg}}"
      bind:itemTap="onMenuItemTap"
      bind:retry="onMenuRetry"
    />

    <!-- 设置菜单 -->
    <menu-list
      title="{{MENU_CONFIG.SETTINGS.title}}"
      items="{{settingItems}}" 
      loading="{{loading}}"
      error="{{error}}"
      errorMsg="{{errorMsg}}"
      bind:itemTap="onSettingItemTap"
      bind:retry="onSettingRetry"
    />
  </view>
  
  <!-- WEUI组件 -->
  <mp-toptips msg="{{toptipsMsg}}" type="{{toptipsType}}" show="{{toptipsShow}}"></mp-toptips>
</view>