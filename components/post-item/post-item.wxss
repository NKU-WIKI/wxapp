.post-item {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 14rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0rpx;
}

.post-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.header-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  background-color: #f5f5f5;
}

.post-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-time-container {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.follow-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

.post-content-wrapper {
  margin-bottom: 0;
  min-height: 0;
}

.post-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 2rpx;
  color: #333;
  line-height: 1.3;
}

.post-content {
  padding: 0;
  margin-bottom: 0rpx;
}

.post-text {
  margin-bottom: 0rpx;
}

.post-body {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
}

.post-body.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

/* Markdown 渲染相关样式 */
.markdown-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.markdown-wrapper.collapsed {
  max-height: 180rpx;
}

/* 增加展开状态的Markdown容器高度 */
.markdown-wrapper:not(.collapsed) {
  max-height: none;
}

.markdown-wrapper .text-area-container {
  margin-bottom: 0;
  margin-top: 0;
  padding: 0;
}

/* 确保text-area组件中的预览区域在post-item中显示正常 */
.markdown-wrapper .markdown-preview {
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 0;
}

/* 移除text-area中工具栏的边距，确保与post-item样式一致 */
.markdown-wrapper .toolbar {
  margin-top: 0;
  margin-bottom: 0;
  background-color: transparent;
  padding: 0;
}


.read-more {
  color: #576b95;
  font-size: 24rpx;
  margin-top: 0;
  display: inline-flex;
  align-items: center;
}

.read-more-wrapper {
  width: 100%;
  margin-top: 0;
  margin-bottom: 0;
  text-align: right;
  padding: 2rpx 0;
}

.expand-icon {
  margin-left: 4rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
  position: relative;
}

.single-image .post-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.double-image .post-image,
.multi-image .post-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.image-count {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.post-footer {
  margin-top: 1rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f5f5f5;
}

.post-footer-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 30rpx;
}

/* 标签相关样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  padding: 0;
  margin: 4rpx 0 2rpx 0;
}

.tag-item {
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  line-height: 1.3;
  display: inline-flex;
  align-items: center;
}


/* 评论预览区域 */
.comment-preview {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #f8f8fa;
  border-radius: 8rpx;
  padding: 10rpx;
}

.comment-item {
  margin-bottom: 6rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.comment-author {
  color: #576b95;
  font-weight: 500;
}

.comment-content {
  color: #333;
}

.view-more {
  color: #576b95;
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: center;
}

/* 适配卡片模式 */
.post-item.card {
  margin: 20rpx;
  width: calc(100% - 40rpx);
}

.follow-button {
  min-width: 160rpx !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  border-radius: 30rpx !important;
  padding: 0 40rpx !important;
  text-align: center !important;
  font-weight: 400 !important;
  font-size: 28rpx !important;
  box-sizing: border-box !important;
  display: inline-block !important;
  border: none !important;
  margin: 0 !important;
  background-color: transparent !important;
  background: transparent !important;
  box-shadow: none !important;
  overflow: visible !important;
}

.follow-button.followed {
  background-color: #f2f2f2 !important;
  color: #999 !important;
}

.follow-button::after {
  display: none !important;
  border: none !important;
}

.follow-button .btn-text {
  width: 100% !important;
  display: inline-block !important;
  text-align: center !important;
  overflow: visible !important;
} 