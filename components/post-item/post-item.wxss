.post-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.post-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.post-header-left {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f5f5f5;
}

.post-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-time-container {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-shrink: 0;
}

.follow-container {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.follow-btn {
  padding: 4rpx 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background-color: #1aad19;
  color: #fff;
  min-width: 120rpx;
  text-align: center;
}

.follow-btn.followed {
  background-color: #f5f5f5;
  color: #999;
}

.post-content-wrapper {
  margin-bottom: 20rpx;
}

.post-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
  line-height: 1.4;
}

.post-content {
  padding: 0;
}

.post-text {
  margin-bottom: 16rpx;
}

.post-body {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
}

.post-body.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* Markdown 渲染相关样式 */
.markdown-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.markdown-wrapper.collapsed {
  max-height: 200rpx;
}

/* 增加展开状态的Markdown容器高度 */
.markdown-wrapper:not(.collapsed) {
  max-height: none;
}

.markdown-wrapper .text-area-container {
  margin-bottom: 0;
}

/* 确保text-area组件中的预览区域在post-item中显示正常 */
.markdown-wrapper .markdown-preview {
  background-color: transparent;
  border: none;
  padding: 0;
}

/* 移除text-area中工具栏的边距，确保与post-item样式一致 */
.markdown-wrapper .toolbar {
  margin-top: 0;
  background-color: transparent;
  padding: 0;
}

/* 覆盖 towxml 默认样式 */
.h2w {
  font-size: 28rpx !important;
  line-height: 1.8 !important;
  word-wrap: break-word !important;
  padding: 0 !important;
}

.h2w__h1, .h2w__h2, .h2w__h3, .h2w__h4, .h2w__h5, .h2w__h6 {
  font-weight: bold !important;
  margin-bottom: 0.8em !important;
  margin-top: 0.6em !important;
}

.h2w__h1 {
  font-size: 32rpx !important;
  border-bottom: 1px solid #f0f0f0 !important;
  padding-bottom: 0.3em !important;
}

.h2w__h2 {
  font-size: 30rpx !important;
}

.h2w__h3 {
  font-size: 28rpx !important;
}

.h2w__p {
  margin-bottom: 0.8em !important;
}

.h2w__code {
  font-size: 26rpx !important;
  background-color: #f8f8f8 !important;
  border-radius: 4rpx !important;
  padding: 10rpx !important;
}

.h2w__pre {
  margin-bottom: 16rpx !important;
  background-color: #f8f8f8 !important;
  border-radius: 8rpx !important;
  padding: 16rpx !important;
  white-space: pre-wrap !important;
  word-wrap: break-word !important;
}

.h2w__ul, .h2w__ol {
  margin-bottom: 16rpx !important;
  padding-left: 40rpx !important;
}

.h2w__li {
  margin-bottom: 0.5em !important;
}

.h2w__blockquote {
  border-left: 6rpx solid #ddd !important;
  padding: 12rpx 24rpx !important;
  background-color: #f8f8f8 !important;
  margin-bottom: 16rpx !important;
}

.h2w__a {
  color: #1aad19 !important;
  text-decoration: none !important;
}

.h2w__hr {
  margin: 20rpx 0 !important;
  border: none !important;
  border-top: 1px solid #eee !important;
}

.h2w__table {
  width: 100% !important;
  border-collapse: collapse !important;
  margin-bottom: 16rpx !important;
  font-size: 26rpx !important;
}

.h2w__th, .h2w__td {
  border: 1px solid #e0e0e0 !important;
  padding: 8rpx 12rpx !important;
}

.h2w__th {
  background-color: #f8f8f8 !important;
  font-weight: bold !important;
}

.read-more {
  color: #1aad19;
  font-size: 26rpx;
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
}

.read-more-wrapper {
  width: 100%;
  margin-top: 8rpx;
  text-align: center;
  padding: 8rpx 0;
}

.expand-icon {
  margin-left: 4rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 16rpx;
  position: relative;
}

.single-image .post-image {
  max-width: 500rpx;
  max-height: 400rpx;
  width: auto;
  height: auto;
  border-radius: 8rpx;
}

.double-image .post-image,
.multi-image .post-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.image-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.post-footer {
  margin-top: 16rpx;
}

.post-footer-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  width: 100%;
}

/* 标签相关样式 */
.tag-list {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-badge {
  position: relative;
  display: inline-block;
}

/* 覆盖mp-badge默认样式 */
.tag-badge .weui-badge {
  background-color: rgba(26, 173, 25, 0.1) !important;
  color: #1aad19 !important;
  font-size: 24rpx !important;
  padding: 4rpx 16rpx !important;
  border-radius: 20rpx !important;
  min-width: unset !important;
  display: inline-block !important;
}

/* 保留原有的标签样式兼容 */
.post-tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.post-tag {
  color: #1aad19;
  font-size: 24rpx;
  background-color: rgba(26, 173, 25, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.post-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
  float: right;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 2rpx;
  transform: scale(0.75);
  padding-left: 10rpx;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-left: 2rpx;
}

.action-item.active .action-text {
  color: #1aad19;
}

/* 分享按钮重置样式 */
.share-button {
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
  border-radius: 0;
  margin: 0;
  box-sizing: content-box;
  display: flex;
  align-items: center;
}

.share-button::after {
  border: none;
}

.comment-preview {
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.comment-item {
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.comment-author {
  color: #1aad19;
  font-weight: 500;
}

.comment-content {
  color: #333;
}

.view-more {
  color: #1aad19;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: right;
} 