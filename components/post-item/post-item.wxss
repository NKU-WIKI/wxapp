.post-item {
  background: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  border-radius: 0;
  box-shadow: none;
  width: 100%;
  box-sizing: border-box;
}

.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.post-header-left {
  display: flex;
  align-items: center;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.post-content-wrapper {
  margin-bottom: 15rpx;
}

.post-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.post-content {
  padding: 10rpx 0;
}

.post-text {
  margin-bottom: 10rpx;
}

.post-body {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.post-body.ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.read-more {
  color: #576b95;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 10rpx;
  position: relative;
}

.post-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.image-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.post-tags {
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.post-tag {
  color: #07c160;
  font-size: 24rpx;
}

.divider {
  margin: 15rpx 0;
  height: 1rpx;
  background: #f0f0f0;
}

.comment-preview {
  margin-bottom: 15rpx;
}

.comment-item {
  margin-bottom: 10rpx;
}

.comment-info {
  display: flex;
  font-size: 26rpx;
  line-height: 1.5;
}

.comment-name {
  color: #07c160;
  font-weight: 500;
}

.comment-text {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.comment-images {
  display: flex;
  margin-top: 8rpx;
  gap: 8rpx;
}

.comment-images image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.view-more-comments {
  color: #07c160;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: right;
}

.post-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 15rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-item image {
  width: 32rpx;
  height: 32rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #666;
}

.icon-container {
  font-size: 32rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 点赞和收藏的激活状态 */
.action-item.liked text,
.action-item.favorited text {
  color: #07c160;
}

.action-item.liked .icon-container,
.action-item.favorited .icon-container {
  color: #07c160;
}

.follow-btn {
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: #07c160;
  color: #fff;
}

.follow-btn.followed {
  background-color: #f0f0f0;
  color: #999;
} 