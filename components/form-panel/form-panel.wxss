.form-panel {
  background: transparent;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
  position: relative;
  z-index: 2;
}

/* 表单项样式 */
.form-panel input-field,
.form-panel picker-field {
  margin-bottom: 0;
  padding: 12rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-panel input-field:last-child,
.form-panel picker-field:last-child {
  border-bottom: none;
}

.form-panel input-field:hover,
.form-panel picker-field:hover {
  background: rgba(102, 126, 234, 0.02);
}

/* 标签样式 */
.form-label {
  font-size: 28rpx;
  color: #636e72;
  font-weight: 500;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.form-label::before {
  content: "";
  width: 4rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

.form-field {
  padding-top: 2rpx;
}

/* 字段分组 */
.field-group {
  margin-bottom: 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.field-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3436;
  margin: 0;
  padding: 20rpx 32rpx 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f4 100%);
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.group-title::before {
  content: "";
  width: 6rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
}

/* 输入框样式 */
.weui-input {
  font-size: 30rpx;
  color: #2d3436;
  background: transparent;
  border-radius: 0;
  padding: 8rpx 0;
  border: none;
  border-bottom: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}
.weui-input:focus {
  border-bottom-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.weui-textarea {
  font-size: 30rpx;
  color: #2d3436;
  width: 100%;
  min-height: 120rpx;
  background: #fafafa;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.weui-textarea:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.weui-input__placeholder,
.weui-textarea__placeholder {
  color: #bbb;
  font-size: 28rpx;
}

/* 分组样式 */
.form-group {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group-title {
  font-size: 28rpx;
  color: #636e72;
  font-weight: 600;
  padding: 24rpx 32rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f4 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 单元格样式 */
.weui-cell {
  padding: 14rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  background: #fff;
  border-radius: 0;
  margin-bottom: 0;
  transition: all 0.3s ease;
}

.weui-cell:last-child {
  border-bottom: none;
}

.weui-cell:active {
  background: rgba(102, 126, 234, 0.02);
}

.panel-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f4 100%);
}

.panel-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.panel-header .subtitle {
  font-size: 26rpx;
  color: #636e72;
  opacity: 0.8;
}

.panel-content {
  padding: 0;
  min-height: auto;
}

.panel-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  background: #f8f9fa;
}

/* 确保表单项有足够高度 */
.form-item {
  display: block;
  margin-bottom: 0;
  padding: 12rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:hover {
  background: rgba(102, 126, 234, 0.02);
}

/* 支持占位符显示 */
.placeholder {
  color: #bbb;
  font-size: 28rpx;
}

/* 表单项容器 */
.form-events-wrapper {
  padding: 0;
}

/* 面板间距优化 */
.form-panel.weui-panel {
  margin: 0;
  border-radius: 0;
  overflow: visible;
  box-shadow: none;
  background: transparent;
}

/* 表单项间距调整 */
.form-panel .weui-cells_form {
  background: transparent;
  border-radius: 0;
  overflow: visible;
  box-shadow: none;
  margin-top: 0;
}

.form-panel .weui-cells_form::before,
.form-panel .weui-cells_form::after {
  border: none;
}

/* 动态字段模板样式 */
.form-panel template[is="form-field"] {
  position: relative;
}

/* 最后一项底部间距 */
.form-panel .weui-cells_form > block:last-child::after {
  border-bottom: none !important;
}

/* 自定义插槽样式 */
.form-panel .custom-slot {
  padding: 24rpx 32rpx;
  background: transparent;
}

/* 缓存按钮样式 */
.cache-button {
  padding: 20rpx 32rpx;
  background: rgba(255, 77, 79, 0.1);
  border-radius: 12rpx;
  margin: 16rpx 32rpx;
  transition: all 0.3s ease;
}

.cache-button:active {
  background: rgba(255, 77, 79, 0.15);
}

.cache-button .button-text {
  color: #ff4d4f;
  font-size: 28rpx;
  font-weight: 500;
}

/* 字段列表样式 */
.field-list {
  margin-bottom: 0;
  background: transparent;
}

.field-item {
  margin-bottom: 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 12rpx 32rpx;
  transition: all 0.3s ease;
}

.field-item:last-child {
  border-bottom: none;
}

.field-item:hover {
  background: rgba(102, 126, 234, 0.02);
}

/* 按钮居中容器 */
.button-wrapper {
  display: flex;
  justify-content: center;
  padding: 24rpx 24rpx 20rpx;
  background: transparent;
}

/* 提交按钮样式 - 增强版 */
.submit-button {
  width: 100% !important;
  height: 96rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border-radius: 48rpx !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: #fff !important;
  line-height: 96rpx !important;
  box-sizing: border-box !important;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4) !important;
  transition: all 0.3s ease !important;
  margin: 0 !important;
  border: none !important;
  position: relative !important;
  overflow: hidden !important;
}

.submit-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: left 0.5s ease;
}

.submit-button:active::before {
  left: 100%;
}

.submit-button:active {
  transform: translateY(2rpx) !important;
  box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.3) !important;
}

/* 提交按钮悬停态 */
.submit-button.button-hover {
  opacity: 0.9 !important;
  transform: translateY(2rpx);
  box-shadow: 0 12rpx 36rpx rgba(102, 126, 234, 0.3) !important;
}
