.form-panel {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.panel-header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.panel-content {
  position: relative;
}

.panel-content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 32rpx;
  right: 32rpx;
  height: 1px;
  background: #f5f5f5;
  transform: scaleY(0.5);
} 