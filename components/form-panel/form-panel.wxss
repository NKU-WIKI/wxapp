.form-panel {
  background: transparent;
  padding: 0;
}

/* 表单项样式 */
.form-panel input-field,
.form-panel picker-field {
  position: relative;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 标签样式 */
.form-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  font-weight: normal;
}

.form-field {
  padding-top: 8rpx;
}

/* 字段分组 */
.field-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

/* 输入框样式 */
.weui-input {
  font-size: 32rpx;
  color: #333;
  width: 100%;
}

.weui-textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 100rpx;
}

.weui-input__placeholder,
.weui-textarea__placeholder {
  color: #bbb;
  font-size: 32rpx;
}

/* 按钮区域样式 */
.weui-btn-area {
  padding: 60rpx 30rpx;
  margin: 0;
}

.weui-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  background: #07C160;
}

/* 分组样式 */
.form-group {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx;
  background: #f7f8fa;
}

/* 分隔线样式 */
.weui-cells::before {
  display: none;
}

.weui-cells::after {
  display: none;
}

.weui-cell::before {
  display: none;
}

.weui-cell {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.weui-cell:last-child {
  border-bottom: none;
}

.panel-header {
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.panel-header .title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.panel-header .subtitle {
  font-size: 28rpx;
  color: #999;
}

.panel-content {
  padding: 24rpx 40rpx;
  min-height: 200rpx;
}

.panel-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 0;
  background: #07c160;
  color: #fff;
}

/* 确保表单项有足够高度 */
.form-item {
  display: block;
  margin-bottom: 24rpx;
}

/* 支持占位符显示 */
.placeholder {
  color: #999;
}

/* 表单项容器 */
.form-events-wrapper {
  padding: 10rpx 0;
}

/* 面板间距优化 */
.form-panel.weui-panel {
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
}

/* 表单项间距调整 */
.form-panel .weui-cells_form {
  --weui-cell-vertical-padding: 28rpx;
  --weui-cell-horizontal-padding: 32rpx;
}

/* 动态字段模板样式 */
.form-panel template[is="form-field"] {
  position: relative;
}

/* 最后一项底部间距 */
.form-panel .weui-cells_form > block:last-child::after {
  border-bottom: none !important;
}

/* 自定义插槽样式 */
.form-panel .custom-slot {
  padding: 24rpx 32rpx;
  background: var(--weui-BG-1);
}

