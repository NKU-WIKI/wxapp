.form-item {
  position: relative;
  padding: 24rpx 32rpx;
  background-color: #fff;
}

.form-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.form-item.error .form-item-label {
  color: #fa5151;
}

.form-item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #fa5151;
  margin-right: 4rpx;
}

.form-item-content {
  position: relative;
}

.form-item-error {
  font-size: 24rpx;
  color: #fa5151;
  margin-top: 8rpx;
}

.form-item-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-item-divider {
  position: absolute;
  left: 32rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #f5f5f5;
} 