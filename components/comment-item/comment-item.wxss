.comment-item {
  background: #fff;
  margin-bottom: 0;
  padding: 8rpx 14rpx;
  border-radius: 0;
  box-shadow: none;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  border-bottom: none;
}

/* comment-item之间添加浅色分隔线 */
.comment-item:not(:last-child) {
  border-bottom: 1rpx solid #f8f8f8;
}

/* 点击跳转覆盖层 */
.tap-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

/* 互动元素的z-index需要高于覆盖层 */
.avatar-container,
.avatar-icon,
.author-name,
.author-bio,
.follow-button,
.action-button,
.comment-image {
  position: relative;
  z-index: 2;
}

/* 头部样式 */
.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4rpx;
}

.comment-header-left {
  display: flex;
  align-items: center;
  flex: 1;
  max-width: 75%;
}

.header-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  justify-content: flex-start;
}

/* 头像容器样式 */
.avatar-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f5f5f5;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头像图标样式 */
.avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.comment-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #666;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 内容区域样式 */
.comment-content-wrapper {
  min-height: 40rpx;
  max-height: 800rpx;
  overflow: hidden;
  position: relative;
  margin: 4rpx 0;
}

.comment-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
  margin-bottom: 8rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-word;
}

/* 图片样式 */
.comment-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
  position: relative;
  margin-bottom: 12rpx;
}

.single-image .comment-image {
  max-width: 100%;
  max-height: 300rpx;
  border-radius: 8rpx;
}

.double-image .comment-image,
.multi-image .comment-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.image-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

/* 底部样式 */
.comment-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 4rpx 0;
  margin-top: 4rpx;
  border-top: 1rpx solid #f8f8f8;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-grow: 1;
  max-width: 50%;
}

.action-buttons {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  justify-content: flex-end;
  min-width: 240rpx;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  padding: 0 6rpx;
  min-width: 44rpx;
  margin-left: 20rpx;
  border: none;
  line-height: normal;
  font-size: inherit;
}

.action-button:after {
  display: none;
}

.action-button.action-button-active {
  color: #ff6b6b;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 4rpx;
}

.delete-button .action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-count {
  font-size: 24rpx;
  color: #999;
}

button.button-hover {
  background-color: #f5f5f5;
  opacity: 0.8;
}

/* 关注按钮容器 */
.follow-container {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: -20rpx;
}

/* 关注按钮 */
.follow-button {
  min-width: 60rpx;
  max-width: 120rpx;
  width: auto;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 26rpx;
  padding: 0 14rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #e8f8ed;
  color: #07c160;
  border: none;
  box-sizing: border-box;
  margin: 0;
}

/* 覆盖按钮的默认样式 */
.follow-button::after {
  border: none;
}

/* 将button标签选择器改为类选择器 */
.follow-button.button {
  margin: 0;
  padding: 0 14rpx;
}

.follow-button.followed {
  background-color: #f2f2f2;
  color: #999;
}

/* 回复区域样式 */
.replies {
  margin-top: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
}

.reply-item {
  padding: 12rpx 0;
  font-size: 26rpx;
  line-height: 1.5;
}

.reply-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 8rpx;
  padding-bottom: 12rpx;
}

.reply-header {
  display: flex;
  width: 100%;
}

.reply-avatar-container {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-right: 12rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #f5f5f5;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reply-avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.reply-content {
  flex: 1;
  min-width: 0;
}

.reply-author-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 4rpx;
}

.reply-author {
  color: #576b95;
  font-weight: 500;
  margin-right: 8rpx;
  font-size: 26rpx;
}

.reply-to {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
  display: inline;
}

.reply-to-user {
  color: #576b95;
  font-weight: 500;
  display: inline;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
  margin-left: auto;
}

.reply-text-content {
  word-break: break-word;
  margin: 4rpx 0 8rpx;
  line-height: 1.5;
}

.reply-text {
  color: #333;
  font-size: 26rpx;
  line-height: 1.5;
}

.reply-images {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
  gap: 8rpx;
}

.reply-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  object-fit: cover;
}

/* 子回复样式 */
.sub-replies {
  background-color: #f0f0f0;
  border-radius: 6rpx;
  padding: 8rpx 12rpx;
  margin-top: 8rpx;
}

.sub-reply-item {
  padding: 6rpx 0;
  font-size: 24rpx;
}

.sub-reply-item:not(:last-child) {
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 6rpx;
  margin-bottom: 6rpx;
}

.sub-reply-header {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
}

.sub-reply-author {
  color: #576b95;
  font-weight: 500;
  margin-right: 4rpx;
}

.sub-reply-to {
  color: #666;
  margin-right: 4rpx;
}

.sub-reply-to-user {
  color: #576b95;
}

.sub-reply-text {
  color: #333;
  word-break: break-word;
}

.view-more-sub-replies {
  font-size: 24rpx;
  color: #576b95;
  text-align: center;
  padding: 6rpx 0;
  margin-top: 6rpx;
}

/* 回复操作区域 */
.reply-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.reply-action-button {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #666;
}

.reply-action-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.reply-action-text {
  font-size: 22rpx;
}

.delete-button {
  color: #ff5252;
}

.view-more-replies {
  font-size: 26rpx;
  color: #576b95;
  margin-top: 12rpx;
  text-align: center;
  padding: 8rpx 0;
  border-top: 1rpx solid #f0f0f0;
  background-color: #f5f5f5;
  border-radius: 0 0 8rpx 8rpx;
}

/* 父评论链接 */
.view-parent-comment {
  font-size: 24rpx;
  color: #07c160;
  padding: 6rpx 0;
  text-align: center;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 4rpx;
  margin-bottom: 8rpx;
}