.nku-comment-item {
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.nku-comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.nku-user-info {
  display: flex;
  align-items: center;
}

.nku-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f6f6f6;
}

.nku-user-name-time {
  display: flex;
  flex-direction: column;
}

.nku-nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.nku-time {
  font-size: 24rpx;
  color: #999;
}

/* 评论操作按钮 */
.nku-comment-actions {
  display: flex;
  align-items: center;
}

.nku-action-btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.nku-action-btn.nku-liked {
  color: #ff6b6b;
}

.nku-action-btn .nku-count-text {
  font-size: 22rpx;
  color: #999;
  margin-left: 2rpx;
}

.nku-action-btn.nku-delete {
  color: #ff4d4f;
}

.nku-comment-content {
  margin-left: 86rpx;
}

.nku-reply-to {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.nku-reply-name {
  color: #1890ff;
  font-weight: 500;
}

.nku-content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.nku-content-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.nku-content-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  background-color: #f6f6f6;
  overflow: hidden;
}

.nku-content-image:nth-child(3n) {
  margin-right: 0;
}

.nku-content-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.nku-replies {
  margin-left: 86rpx;
  margin-top: 16rpx;
}

.nku-replies .nku-comment-item {
  border-radius: 8rpx;
  background-color: #f9f9f9;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.nku-replies .nku-comment-item:last-child {
  margin-bottom: 0;
} 