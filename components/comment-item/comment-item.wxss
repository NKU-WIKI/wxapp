.comment-item {
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f6f6f6;
}

.user-name-time {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.action-btn.liked {
  color: #1890ff;
}

.action-btn.delete {
  color: #ff4d4f;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}

.comment-content {
  margin-left: 86rpx;
}

.reply-to {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.reply-name {
  color: #1890ff;
  font-weight: 500;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.content-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.content-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  background-color: #f6f6f6;
  overflow: hidden;
}

.content-image:nth-child(3n) {
  margin-right: 0;
}

.content-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.replies {
  margin-left: 86rpx;
  margin-top: 16rpx;
}

.replies .comment-item {
  border-radius: 8rpx;
  background-color: #f9f9f9;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.replies .comment-item:last-child {
  margin-bottom: 0;
} 