.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin: 20rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.card-title-area {
  flex: 1;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.card-content {
  padding: 20rpx;
}

.card-footer {
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
} 