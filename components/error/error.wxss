.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-icon-image {
  width: 100%;
  height: 100%;
}

.error-text {
  font-size: 30rpx;
  color: #ff4d4f;
  text-align: center;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  justify-content: center;
}

.error-retry {
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 40rpx;
  margin-right: 20rpx;
  border-radius: 35rpx;
}

.error-close {
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 40rpx;
  border-radius: 35rpx;
}

/* 按钮点击效果 */
.error-retry:active {
  opacity: 0.8;
}

.error-close:active {
  opacity: 0.8;
} 