.menu-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 0;
  height: 1px;
  background: #f5f5f5;
}

.item-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.left {
  display: flex;
  align-items: center;
}

.title {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.right {
  display: flex;
  align-items: center;
}

.value {
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #999;
} 