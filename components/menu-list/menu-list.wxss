/* 菜单区块样式 */
.menu-section {
  width: 100%;
  margin-top: 30rpx;
  background-color: transparent;
}

.menu-title {
  font-size: 30rpx;
  color: #888;
  padding: 20rpx 30rpx;
}

.menu-cells {
  margin-top: 0 !important;
  padding-bottom: 0;
}

/* 菜单项样式 */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-text {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.menu-value {
  color: #999;
  font-size: 28rpx;
} 