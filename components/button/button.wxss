.btn {
  position: relative;
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 44rpx;
  overflow: hidden;
  background: #f5f5f5;
  color: #333;
  border: none;
  padding: 0;
}

.btn::after {
  border: none;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 12rpx;
}

.loading {
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}

.primary {
  background: #07c160;
  color: #fff;
}

.warn {
  background: #fa5151;
  color: #fff;
}

.plain {
  background: transparent;
  border: 2rpx solid currentColor;
}

.plain.primary {
  color: #07c160;
}

.plain.warn {
  color: #fa5151;
}

.mini {
  display: inline-block;
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
}

.disabled {
  opacity: 0.5;
}

.btn-hover {
  opacity: 0.8;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 