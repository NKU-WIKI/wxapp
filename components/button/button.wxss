.btn-content {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: none;
  background-color: #f8f8f8;
  font-weight: normal;
  line-height: 1;
  text-align: center;
  vertical-align: middle;
  overflow: hidden;
  transition: opacity 0.2s;
  padding: 0;
}

.btn-content::after {
  border: none !important;
}

.button-hover {
  opacity: 0.8;
  transform: scale(0.95);
}

.btn-text {
  font-size: 32rpx;
  line-height: 1.2;
}

.icon-count-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮类型 */
.type-primary {
  background-color: #07c160;
  color: #fff;
}

.type-secondary {
  background-color: #fff;
  border: 1px solid #07c160;
  color: #07c160;
}

.type-warn {
  background-color: #fa5151;
  color: #fff;
}

/* 按钮尺寸 */
.size-large {
  width: 100%;
  height: 88rpx;
}

.size-medium {
  min-width: 180rpx;
  height: 72rpx;
  padding: 0 32rpx;
}

.size-mini {
  min-width: 120rpx;
  height: 60rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
}

/* 形状 */
.circle {
  border-radius: 50%;
}

.round {
  border-radius: 999px;
}

/* 禁用状态 */
.disabled {
  background-color: #f2f2f2;
  opacity: 0.5;
}

/* 悬浮按钮 - 完全重写样式来确保圆形 */
.floating {
  position: fixed !important;
  z-index: 100 !important;
  border-radius: 50% !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15) !important;
  transition: all 0.3s ease !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  border: none !important;
  overflow: visible !important;
  
  /* 强制固定尺寸以确保圆形 */
  width: 100rpx !important;
  height: 100rpx !important;
  min-width: unset !important;
  max-width: 100rpx !important;
  min-height: 100rpx !important;
  max-height: 100rpx !important;
}

.floating.size-large {
  width: 120rpx !important;
  height: 120rpx !important;
  min-width: 120rpx !important;
  max-width: 120rpx !important;
  min-height: 120rpx !important;
  max-height: 120rpx !important;
}

.floating.size-medium {
  width: 100rpx !important;
  height: 100rpx !important;
  min-width: 100rpx !important;
  max-width: 100rpx !important;
  min-height: 100rpx !important;
  max-height: 100rpx !important;
}

.floating.size-mini {
  width: 80rpx !important;
  height: 80rpx !important;
  min-width: 80rpx !important;
  max-width: 80rpx !important;
  min-height: 80rpx !important;
  max-height: 80rpx !important;
}

.floating-content {
  position: absolute !important;
  width: 100% !important;
  height: 100% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  left: 0 !important;
  top: 0 !important;
}

/* 确保图标在悬浮按钮中绝对居中 */
.floating-icon {
  position: absolute !important;
  left: 50% !important;
  top: 50% !important;
  transform: translate(-50%, -50%) !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* 悬浮按钮悬停效果 */
.floating.button-hover {
  transform: scale(0.95) translateY(2rpx) !important;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2) !important;
}

/* 悬浮按钮样式增强 */
.floating.type-primary {
  background: linear-gradient(135deg, #29c777 0%, #07c160 100%) !important;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3) !important;
}

.floating.type-secondary {
  background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%) !important;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1) !important;
}

.floating.type-warn {
  background: linear-gradient(135deg, #ff7070 0%, #fa5151 100%) !important;
  box-shadow: 0 8rpx 20rpx rgba(250, 81, 81, 0.3) !important;
}

/* 位置 */
.top-left {
  top: 30rpx;
  left: 30rpx;
}

.top-right {
  top: 30rpx;
  right: 30rpx;
}

.bottom-left {
  bottom: 180rpx;
  left: 30rpx;
}

.bottom-right {
  bottom: 180rpx;
  right: 30rpx;
}

.center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}