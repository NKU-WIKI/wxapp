.setting-item {
  position: relative;
  padding: 28rpx 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-item.is-link {
  padding-right: 50rpx;
}

.setting-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.setting-item:active {
  background-color: #f8f8f8;
}

/* 左侧部分 */
.setting-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.setting-item-icon {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.setting-item-title-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.setting-item-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
}

.setting-item-subtitle {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
  margin-top: 6rpx;
}

/* 右侧部分 */
.setting-item-right {
  display: flex;
  align-items: center;
}

.setting-item-value {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.setting-item-arrow {
  display: flex;
  align-items: center;
}

/* 分割线 */
.setting-item-divider {
  position: absolute;
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #f5f5f5;
} 