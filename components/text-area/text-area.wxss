/* 文本域容器 */
.text-area-container {
  position: relative;
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
}

/* 文本域 */
.text-area {
  width: 100%;
  padding: 20rpx;
  line-height: 1.5;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  border-radius: 8rpx;
}

/* 禁用状态 */
.text-area.disabled {
  opacity: 0.7;
  color: #999;
}

/* 占位符样式 */
.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 计数容器 */
.count-container {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  z-index: 10;
}

/* 计数文本 */
.count-text {
  font-size: 24rpx;
  color: #999;
}

/* 达到限制时的计数文本 */
.count-limit {
  color: #ff4d4f;
}

.markdown-editor {
  font-family: 'Courier New', Courier, monospace;
}

.markdown-preview {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #fff;
  border-radius: 8rpx;
}

/* 只读模式的预览区样式 */
.markdown-preview.read-only {
  padding: 0;
}

.markdown-content {
  width: 100%;
}

.markdown-content h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333;
}

.markdown-content h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 26rpx 0 18rpx;
  color: #333;
}

.markdown-content h3 {
  font-size: 30rpx;
  font-weight: bold;
  margin: 22rpx 0 16rpx;
  color: #333;
}

.markdown-content p {
  margin: 16rpx 0;
  line-height: 1.6;
}

.markdown-content a {
  color: #07c160;
  text-decoration: none;
}

.markdown-content img {
  max-width: 100%;
  margin: 10rpx 0;
}

.markdown-content code {
  font-family: monospace;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #e83e8c;
}

.markdown-content pre {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 20rpx 0;
}

.markdown-content pre code {
  background: none;
  padding: 0;
  color: #333;
}

.text-preview {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #fff;
  border-radius: 8rpx;
}

.text-preview.read-only {
  padding: 0;
}

.empty-preview {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.counter {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.toolbar {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #f9f9f9;
  border-top: 1rpx solid #eee;
}

.tool-item {
  flex: 0 0 auto;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-item.active {
  color: #07c160;
}

.tool-item.preview-only {
  margin-left: auto;
}

.tool-icon {
  font-size: 32rpx;
}

/* 加载状态 */
.loading-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: #07c160;
  animation: spin 1s infinite linear;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 调试信息 */
.debug-info {
  padding: 4rpx 10rpx;
  background: #f5f5f5;
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid #eee;
} 