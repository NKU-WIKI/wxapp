<view class="nav-tab-container">
  <!-- 顶部导航栏 -->
  <nav-bar
    title="{{title}}"
    bgColor="{{bgColor}}"
    textColor="{{textColor}}"
    showBack="{{showBack}}"
    showHome="{{showHome}}"
    showAvatar="{{showAvatar}}"
    bind:buttonTap="onButtonTap"
  />
  
  <!-- 使用独立的tab-bar组件 -->
  <tab-bar 
    wx:if="{{tabTitles.length > 0}}" 
    tabs="{{tabTitles}}" 
    activeTab="{{activeTab}}" 
    bind:change="onTabChange"
    activeColor="{{activeTabColor}}"
  />
</view> 