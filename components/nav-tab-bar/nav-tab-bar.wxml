<view class="nav-tab-container">
  <!-- 顶部导航栏 -->
  <nav-bar
    title="{{title}}"
    bgColor="{{bgColor}}"
    textColor="{{textColor}}"
    showBack="{{showBack}}"
    showHome="{{showHome}}"
    showAvatar="{{showAvatar}}"
    bind:buttonTap="onButtonTap"
  />
  
  <!-- 标签栏 -->
  <view class="tab-bar" wx:if="{{tabTitles.length > 0}}">
    <view 
      wx:for="{{tabTitles}}"
      wx:key="index"
      class="tab-item {{activeTab === index ? 'active' : ''}}"
      bind:tap="onTabChange"
      data-index="{{index}}"
    >
      <text>{{item}}</text>
    </view>
  </view>
</view> 