<view class="nav-tab-container">
  <!-- 顶部导航栏 -->
  <nav-bar
    title="{{title}}"
    nav-buttons='[{"type": "back", "show": showBack}, {"type": "home", "show": showHome}, {"type": "logo", "show": false}, {"type": "notification", "show": false}, {"type": "avatar", "show": false}]'
    bg-color="{{bgColor}}"
    text-color="{{textColor}}"
  />
  
  <!-- 标签栏 -->
  <view class="tab-bar" wx:if="{{tabTitles.length > 0}}">
    <view 
      wx:for="{{tabTitles}}"
      wx:key="index"
      class="tab-item {{activeTab === index ? 'active' : ''}}"
      bind:tap="onTabChange"
      data-index="{{index}}"
    >
      <text>{{item}}</text>
    </view>
  </view>
</view> 