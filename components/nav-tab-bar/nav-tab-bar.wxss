.nav-tab-container {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #fff;
}

.tab-scroll-view {
  width: 100%;
  white-space: nowrap;
}

.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #eee;
  min-width: 100%;
}

.tab-item {
  flex: 0 0 auto;
  text-align: center;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  display: inline-block;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
} 