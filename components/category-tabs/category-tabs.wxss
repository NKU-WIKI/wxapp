.tabs {
  width: 100%;
  height: 88rpx;
  background: #fff;
  white-space: nowrap;
}

.tabs-content {
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 32rpx;
}

.tab-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #666;
  height: 100%;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #333;
  border-radius: 2rpx;
} 