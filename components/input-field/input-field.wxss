.input-field {
  position: relative;
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-field.is-focus {
  background-color: #f0f0f0;
}

.input-field.disabled {
  opacity: 0.6;
  background-color: #f5f5f5;
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
}

.field-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.clear-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.counter {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.weui-cell {
  padding: 0;
  border: none;
  background: transparent;
  margin-bottom: 24rpx;
}

.field-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.field-input {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.field-textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 120rpx;
  line-height: 1.6;
}

.field-placeholder {
  color: #bbb;
}

.weui-cell:last-child {
  margin-bottom: 0;
} 