.input-field {
  position: relative;
  width: 100%;
  background-color: transparent;
  border-radius: 0;
  padding: 12rpx 0;
  box-shadow: none;
  transition: all 0.3s ease;
}

.input-field.is-focus {
  background-color: rgba(102, 126, 234, 0.02);
}

.input-field.disabled {
  opacity: 0.6;
  background-color: transparent;
}

.input-field .field-label {
  font-size: 28rpx;
  color: #636e72;
  margin-bottom: 6rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.input-field .field-label::before {
  content: "";
  width: 4rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  opacity: 0.7;
}

.input-field .input {
  font-size: 30rpx;
  color: #2d3436;
  padding: 8rpx 0;
  border: none;
  border-bottom: 2rpx solid #f0f0f0;
  background: transparent;
  width: 100%;
  transition: all 0.3s ease;
}

.input-field .input:focus {
  border-bottom-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-field .placeholder {
  color: #bdc3c7;
  font-size: 28rpx;
}

.input-field .clear-icon {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx;
  color: #636e72;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.input-field .clear-icon:active {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.input-field .counter {
  font-size: 24rpx;
  color: #8799a3;
  text-align: right;
  margin-top: 8rpx;
}

