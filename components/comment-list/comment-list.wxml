<!-- 评论列表组件 -->
<view class="comment-section">
  <view class="section-header">
    <text class="section-title">评论 ({{total || 0}})</text>
  </view>

  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading && comments.length === 0}}">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>

  <!-- 错误状态 -->
  <view class="error-container" wx:elif="{{error}}">
    <view class="error-icon">
      <icon name="error" size="48"></icon>
    </view>
    <view class="error-text">{{errorMsg || '加载失败'}}</view>
    <view class="retry-btn" bindtap="retry">重试</view>
  </view>

  <!-- 空状态 -->
  <view class="empty-container" wx:elif="{{comments.length === 0}}">
    <view class="empty-icon">
      <icon name="comment" size="48"></icon>
    </view>
    <view class="empty-text">暂无评论，快来抢沙发吧</view>
  </view>

  <!-- 评论列表 -->
  <view class="comment-list" wx:elif="{{comments && comments.length > 0}}">
    <view class="comment-item" wx:for="{{comments}}" wx:key="id">
      <view class="comment-main">
        <view class="avatar-container" bindtap="goToUserProfile" data-user-id="{{item.openid}}">
          <image 
            class="avatar" 
            src="{{item.avatar || '/icons/avatar1.png'}}" 
            mode="aspectFill"
            binderror="handleImageError">
          </image>
        </view>
        
        <view class="comment-content">
          <view class="comment-header">
            <text 
              class="comment-author" 
              bindtap="goToUserProfile" 
              data-user-id="{{item.openid}}">
              {{item.nickname || '用户'}}
            </text>
            <text class="comment-time">{{item.relativeTime}}</text>
          </view>
          
          <text class="comment-text" user-select="{{true}}">{{item.content}}</text>
          
          <!-- 评论图片显示 -->
          <view class="comment-images" wx:if="{{item.image && item.image.length > 0}}">
            <image 
              wx:for="{{item.image}}" 
              wx:for-item="img" 
              wx:key="index"
              class="comment-image" 
              src="{{img}}" 
              mode="aspectFill"
              data-urls="{{item.image}}"
              data-current="{{img}}"
              binderror="handleImageError"
              bindtap="previewCommentImage">
            </image>
          </view>
          
          <!-- 回复预览区域 -->
          <view class="reply-preview" wx:if="{{item.reply_preview && item.reply_preview.length > 0}}">
            <view class="reply-item" wx:for="{{item.reply_preview}}" wx:for-item="reply" wx:key="id">
              <text 
                class="reply-author" 
                bindtap="goToUserProfile" 
                data-user-id="{{reply.openid}}">
                {{reply.nickname || '用户'}}：
              </text>
              <text class="reply-text">{{reply.content}}</text>
            </view>
            
            <view 
              class="view-more-replies" 
              wx:if="{{item.reply_count > item.reply_preview.length}}" 
              data-comment-id="{{item.id}}" 
              bindtap="viewMoreReplies">
              <text>查看全部{{item.reply_count}}条回复</text>
            </view>
          </view>
        </view>
      </view>
      
      <!-- 评论底部操作区 -->
      <view class="comment-footer-actions">
        <view class="comment-actions-left">
          <view class="action-time">{{item.relativeTime}}</view>
        </view>
        
        <view class="comment-actions-right">
          <!-- 回复按钮 -->
          <view 
            class="action-reply" 
            wx:if="{{allowReply}}"
            data-id="{{item.id}}" 
            data-index="{{index}}" 
            bindtap="handleReply">
            <icon name="comment" size="28"></icon>
            <text>回复</text>
          </view>
          
          <!-- 点赞按钮 -->
          <view 
            class="action-like {{item.isLiked ? 'liked' : ''}}" 
            data-id="{{item.id}}" 
            data-index="{{index}}" 
            bindtap="handleLike">
            <icon name="{{item.isLiked ? 'like-active' : 'like'}}" size="28" color="{{item.isLiked ? '#07c160' : ''}}"></icon>
            <text class="{{item.isLiked ? 'liked-text' : ''}}">{{item.like_count || 0}}</text>
          </view>
          
          <!-- 删除按钮，只有评论作者才能看到 -->
          <view 
            class="action-delete" 
            wx:if="{{item.openid === currentOpenid}}" 
            data-id="{{item.id}}" 
            data-index="{{index}}" 
            bindtap="deleteComment">
            <icon name="delete" size="28"></icon>
            <text>删除</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="load-more" wx:if="{{hasMore}}" bindtap="loadMore">
    <view wx:if="{{loading}}" class="loading-more">
      <view class="loading-spinner small"></view>
      <text>加载中...</text>
    </view>
    <view wx:else class="load-more-text">
      <text>加载更多</text>
    </view>
  </view>

  <!-- 到底提示 -->
  <view class="end-text" wx:elif="{{comments.length > 0}}">
    <text>已经到底了</text>
  </view>
  
  <!-- 评论输入区域 -->
  <view class="comment-input-area">
    <view class="comment-input-container">
      <input 
        class="comment-input" 
        placeholder="{{replyTo ? '回复 @' + replyTo.nickname : '写评论...'}}" 
        value="{{commentText}}"
        focus="{{commentFocus}}"
        bindfocus="onCommentFocus"
        bindinput="onCommentInput"
        confirm-type="send"
        bindconfirm="submitComment"
      />
      
      <!-- 取消回复按钮，仅在回复模式下显示 -->
      <view 
        class="cancel-reply-btn" 
        wx:if="{{replyTo}}"
        bindtap="cancelReply">
        <icon name="close" size="16"></icon>
      </view>
      
      <!-- 发送按钮 -->
      <view 
        class="submit-btn {{commentText.trim() ? 'active' : ''}}" 
        bindtap="submitComment"
        data-disabled="{{!commentText.trim() || isSubmitting}}">
        <text>发送</text>
      </view>
    </view>
  </view>
</view> 