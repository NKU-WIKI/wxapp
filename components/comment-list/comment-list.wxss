/* 评论区样式 */
.comment-section {
  padding: 0;
  background-color: #fff;
  margin: 0;
  border-radius: 0;
  border-top: none;
}

/* 标题区样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0;
  padding: 10rpx 20rpx;
  border-bottom: none;
}

/* 详情页的评论列表 */
.comment-list-container {
  margin: 0;
  padding: 0;
}

/* 评论列表 */
.comment-list {
  margin: 0;
  padding: 0 20rpx;
}

/* 中央加载状态 */
.center-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #07c160;
  margin: 0 6rpx;
  animation: dot-animation 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误消息 */
.error-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.error-message text {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #ff5252;
}

.error-message .error-text {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #ff5252;
}

.error-message .error-btn {
  margin-top: 20rpx;
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 空消息 */
.empty-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-message .empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

@keyframes dot-animation {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 评论项 */
.comment-item {
  display: flex;
  padding: 10rpx 0;
  border-bottom: none;
  transition: background-color 0.3s ease;
}

/* 高亮样式 */
.comment-item.highlighted {
  background-color: rgba(103, 128, 255, 0.1);
  border-radius: 8rpx;
  padding: 24rpx 12rpx;
  position: relative;
  animation: highlight-pulse 2s ease-in-out;
}

@keyframes highlight-pulse {
  0% { background-color: rgba(103, 128, 255, 0.1); }
  50% { background-color: rgba(103, 128, 255, 0.2); }
  100% { background-color: rgba(103, 128, 255, 0.1); }
}

/* 用户头像 */
.comment-user {
  width: 80rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

/* 评论主体 */
.comment-body {
  flex: 1;
  min-width: 0; /* 防止内容溢出 */
}

/* 评论头部 */
.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.comment-user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

/* 评论内容 */
.comment-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-word;
}

/* 评论图片 */
.comment-images {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
  margin-bottom: 16rpx;
}

.comment-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

/* 回复预览 */
.reply-preview {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.reply-item {
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.reply-author {
  color: #576b95;
  font-weight: 500;
}

.reply-text {
  color: #333;
}

.view-more-replies {
  font-size: 26rpx;
  color: #576b95;
  margin-top: 10rpx;
}

/* 评论操作 */
.comment-actions {
  display: flex;
  margin-top: 16rpx;
}

.action-btn {
  margin-right: 24rpx;
  font-size: 26rpx;
  color: #999;
}

.action-text {
  color: #999;
}

.like-btn.active .action-text {
  color: #576b95;
}

.reply-btn {
  color: #999;
}

.delete-btn {
  color: #ff5252;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.loading-more {
  display: flex;
  align-items: center;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

/* 底部提示 */
.end-text {
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 评论操作区 */
.comment-footer-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #f5f5f5;
}

.comment-actions-left {
  font-size: 24rpx;
  color: #999;
}

.comment-actions-right {
  display: flex;
  align-items: center;
}

.action-time {
  font-size: 24rpx;
  color: #999;
}

.action-reply, .action-like, .action-delete {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.action-reply text, .action-like text, .action-delete text {
  margin-left: 4rpx;
}

.action-like.liked {
  color: #07c160;
}

.action-like.liked text {
  color: #07c160;
}

.liked-text {
  color: #07c160;
}

.action-delete {
  color: #ff5252;
}

/* 评论输入区域 */
.comment-input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 10rpx 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.comment-input-container {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 24px;
  padding: 8px 16px;
  position: relative;
}

.comment-input {
  flex: 1;
  height: 36px;
  font-size: 14px;
  padding: 0;
  background-color: transparent;
}

.cancel-reply-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  margin-right: 8px;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.submit-btn {
  min-width: 56px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px;
  margin-left: 8px;
  background-color: #dddddd;
  color: #888888;
  font-size: 14px;
  transition: all 0.3s ease;
}

.submit-btn.active {
  background-color: #07c160 !important;
  color: #ffffff !important;
  font-weight: 500;
  box-shadow: 0 2px 4px rgba(7, 193, 96, 0.2);
}

/* 错误状态 - TO BE DELETED */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.error-icon {
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.retry-btn {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1aad19;
  border-radius: 30rpx;
}

/* 评论滚动区 */
.comment-scroll {
  height: 75vh; /* 设置高度为视口高度的75% */
  width: 100%;
}

/* 底部留白，防止输入框遮挡内容 */
.bottom-padding {
  height: 120rpx; /* 底部留白高度，与输入框高度相匹配 */
  width: 100%;
} 