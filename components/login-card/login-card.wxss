.login-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
}

/* 功能区域 */
.feature-section {
  width: 100%;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.feature-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-icon {
  font-size: 120rpx;
  color: #666;
  margin-right: 16rpx;
}

.feature-texts {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-subtitle {
  font-size: 28rpx;
  color: #666;
}

.feature-list {
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-item icon {
  font-size: 48rpx;
}

.feature-item text {
  font-size: 28rpx;
  color: #666;
}

/* 登录区域 */
.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160 !important;
  border-radius: 44rpx;
  margin-bottom: 24rpx;
  padding: 0;
}

.login-btn[disabled] {
  opacity: 0.6;
  background: #999 !important;
}

.wechat-icon {
  font-size: 40rpx;
  margin-right: 8rpx;
}

.login-btn text {
  color: #fff;
  font-size: 32rpx;
}

.agreement-section {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.agreement-text {
  display: flex;
  align-items: center;
}

.agreement-text checkbox {
  transform: scale(0.7);
  margin-right: 4rpx;
}

.link {
  color: #07c160;
  display: inline;
  white-space: nowrap;
}

/* 调整checkbox组件的样式 */
checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
}

/* 调整文字间距 */
.agreement-section view {
  display: flex;
  align-items: center;
  white-space: nowrap;
  font-size: 24rpx;
} 