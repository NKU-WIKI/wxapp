.user-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin: 30rpx 10rpx 0rpx 10rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f6f6f6;
  border: 1px solid #f0f0f0;
}

/* 旧的头像样式 - 保留以兼容 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  border: 1px solid #f0f0f0;
}

/* 新的头像图标样式 */
.avatar-icon {
  width: 100% !important;
  height: 100% !important;
  border-radius: 50%;
  overflow: hidden;
}

.user-details {
  flex: 1;
  overflow: hidden;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-bio {
  font-size: 26rpx;
  color: #888;
  max-height: 72rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.user-action {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.edit-btn {
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
}

.follow-button {
  min-width: 60rpx;
  max-width: 120rpx;
  width: auto;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 26rpx;
  padding: 0 14rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #e8f8ed;
  color: #07c160;
  border: none;
  box-sizing: border-box;
  margin: 0;
}

/* 覆盖按钮的默认样式 */
.follow-button::after {
  border: none;
}

button.follow-button {
  margin: 0;
  padding: 0 14rpx;
}

.follow-button.followed {
  background-color: #f2f2f2;
  color: #999;
}

/* 新的网格布局统计样式 */
.user-stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 24rpx;
}

.stat-grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background: white;
  transition: all 0.3s ease;
  position: relative;
}

.stat-grid-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.stat-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.stat-icon-wrapper.posts {
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.15),
    rgba(102, 126, 234, 0.05)
  );
}

.stat-icon-wrapper.favorites {
  background: linear-gradient(
    135deg,
    rgba(253, 121, 168, 0.15),
    rgba(253, 121, 168, 0.05)
  );
}

.stat-icon-wrapper.following {
  background: linear-gradient(
    135deg,
    rgba(0, 206, 201, 0.15),
    rgba(0, 206, 201, 0.05)
  );
}

.stat-icon-wrapper.followers {
  background: linear-gradient(
    135deg,
    rgba(253, 121, 168, 0.15),
    rgba(253, 121, 168, 0.05)
  );
}

.stat-icon-wrapper.likes {
  background: linear-gradient(
    135deg,
    rgba(243, 156, 18, 0.15),
    rgba(243, 156, 18, 0.05)
  );
}

.stat-icon-wrapper.points {
  background: linear-gradient(
    135deg,
    rgba(155, 89, 182, 0.15),
    rgba(155, 89, 182, 0.05)
  );
}

.stat-text {
  font-size: 24rpx;
  color: #636e72;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.stat-count {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d3436;
}

/* 旧的统计样式 - 保留以兼容，但隐藏 */
.user-stats {
  display: none;
}

/* 占位符样式 */
.user-card-placeholder {
  min-height: 200rpx;
}

.user-info-placeholder {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.info-placeholder {
  flex: 1;
}

.name-placeholder {
  height: 36rpx;
  width: 200rpx;
  background-color: #f0f0f0;
  margin-bottom: 16rpx;
  border-radius: 4rpx;
}

.bio-placeholder {
  height: 26rpx;
  width: 300rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
}

.user-card-cell-status {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx 10rpx 0 10rpx;
}
