<view bindtap="navigateTo" class="weui-cell {{link ? 'weui-cell_access' : ''}} {{extClass}} {{hover ? 'weui-cell_active' : ''}}" hover-class="{{hover ? 'weui-cell_active' : ''}}">
  <view wx:if="{{icon}}" class="weui-cell__hd">
    <image src="{{icon}}" class="weui-cell__icon"></image>
  </view>
  <view class="weui-cell__bd">{{value}}</view>
  <view wx:if="{{footer}}" class="weui-cell__ft">{{footer}}</view>
  <view wx:if="{{link}}" class="weui-cell__ft weui-cell__ft_in-access"></view>
</view> 