<cell-status
  loading="{{loading}}"
  error="{{error}}"
  errorMsg="{{errorText}}"
  empty="{{users.length === 0 && !loading && !error}}"
  emptyText="{{emptyText}}"
  hasMore="{{hasMore}}"
  noMoreText="{{noMoreText}}"
  bindretry="handleRetry"
  bindloadmore="loadMore"
>
  <view class="user-list" style="{{fadeStyle || ''}}">
    <!-- 用户列表 -->
    <block wx:for="{{users}}" wx:key="openid">
      <view class="user-item">
        <user-card 
          user="{{item}}" 
          showFollow="{{true}}"
          bindfollow="handleUserFollow"
        />
      </view>
    </block>
  </view>
  
  <!-- 加载更多状态 -->
  <view wx:if="{{loadingMore && users.length > 0}}" class="loading-more">
    <view class="loading-icon"></view>
    <text>{{loadingText || '加载中...'}}</text>
  </view>
</cell-status> 